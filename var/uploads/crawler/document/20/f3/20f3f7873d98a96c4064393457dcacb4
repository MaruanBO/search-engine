jQuery(document).ready(function( $ ) {
	var scrollTop     = $(window).scrollTop();
   var elementOffset = $('#infra-affixed-nav').offset().top;
   var distance      = (elementOffset - scrollTop);
	
	$('#infra-affixed-nav').affix({
	    offset: {
	      top: distance
	    }
   });
   
   if (elementOffset < 200) {
	   $('.navbar-fixed-top').css('top','0px');
   }
   
   $('#infra-affixed-nav').on('affix.bs.affix', function () {
			$('.navbar-fixed-top').css('top','-100px');
			//alert('affixed');
	});
	$('#infra-affixed-nav').on('affix-top.bs.affix', function () {
			$('.navbar-fixed-top').css('top','0px');
			//alert('reverted');
	});
	
	 if ( $( '#infra-affixed-nav' ).hasClass( "affix" ) ) {
	 	$('.navbar-fixed-top').css('top','-100px');
	 }
	
	if ( $( '#infra-affixed-nav' ).hasClass( "affix-top" ) ) {
	 	$('.navbar-fixed-top').css('top','0px');
	 }

	$('#infra-affixed-nav  li  a').click( function(event){
	  	event.preventDefault();
	  	$('body').scrollTo( $(this).data("target") , 1000);

	  	if ( $(this).data("target") == '#top') {
	  		$('#infra-affixed-nav').affix({
		  		offset: {
			  		top: distance
			  	}
			});
			$('.navbar-fixed-top').css('top','0px');
	
		}
		 
	});
	
 

});
