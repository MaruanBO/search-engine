      $(".vid").colorbox({inline:true, width:"490px", rel:'group3',
        onComplete: function () {
          var content = $($(this).attr('href'));
          var title = $(this).attr('title');
          _gaq.push(['_trackPageview', '/testimonial/video/' + title ]);

          if ($(this).data('player')) {
            $(this).data('player').destroy();
            $(this).removeData('player');
          }
          
          if ($(this).data('colorbox-content')) {
            content.html($(this).data('colorbox-content'));
          } else {
            content.css('height', content.height());
            $(this).data('colorbox-content', content.html());
          }
        
          var player = _V_( content.find('video').attr('id') );
          $(this).data('player', player);
        },
        onCleanup: function () {
          try {
            $(this).data('player').destroy();
          } catch (e) {
            
          }
          $(this).removeData('player');
          _gaq.push(['_trackPageview', '/' ]);
        }
      });
    });
