var video_source = "//2.bdcstatic.com/images/kraken/home/homepage_video";

function rotate_images(){
var big_pics = ["homepage-1.jpg", "homepage-2.jpg", "homepage-3.jpg", "homepage-4.jpg", "homepage-5.jpg", "homepage-6.jpg"];
$.each(big_pics, function(index,val){
$('.pictures').append('<img src="" id="x-pic-' + index + '" style="display:none">');
});

$('#x-pic-0').attr("src", "//1.bdcstatic.com/images/kraken/home/" + big_pics[0]).css("display", "block");

var counter=1;
var max = big_pics.length;

pictureRotate = setInterval(function(){
if (counter == 0) {
prev = max-1;
} else {
prev = counter - 1;
}
var fadein = $('#x-pic-' + counter);
var fadeout =$('#x-pic-' + prev);

$(fadein).attr("src", "//1.bdcstatic.com/images/kraken/home/" + big_pics[counter]).fadeIn(1000);
$(fadeout).fadeOut(1000);

if (counter < max-1) {
counter++;
} else {
counter = 0;
}
},4000);
}

function insert_video(){
return(
'<source src="' + video_source + '.mp4" type="video/mp4" id="video2">' +
'<source src="' + video_source + '.webm" type="video/webm" id="video1">'
);
}

$('#bkg_video').ready(function(){
window.setTimeout(function(){
var vidz = document.getElementById("bkg_video");
if(vidz !== null){
$(vidz).append(insert_video);
vidz.load();
vidz.play();
}
},300);
});

$(window).resize(function(){
if(($(window).width() < 1025) || ($('.no-video').length != 0)){
if($('#x-pic-0').length ==0){
$('#bkg_video').remove();
$('#video1').remove();
$('#video2').remove();
rotate_images();
}
}else{
if(($('.video').length !=0) && ($('#video1').length == 0)){

$('#bkg_video').remove();
if(typeof pictureRotate !== "undefined"){clearInterval(pictureRotate);}
$('.pictures img').remove();
var temp_contents = $('.videobackground').html();

$('.videobackground').html(
'<video id="bkg_video" autoplay muted loop  data-src="' + video_source + '">'   +
insert_video()     +
'</video>' + temp_contents);

document.getElementById("bkg_video").load();
}
document.getElementById("bkg_video").play();

if($('#bkg_video').height() > $('.videobackground').height()){
$('#bkg_video').css("margin-top",  -(parseInt(($('#bkg_video').height() - $('.videobackground').height()) / 2))     );
}else{
$('#bkg_video').css("margin-top",0);
}
}
});

$(".videobackground").on('focus','div.inlined2 input#email',(function(){
$(this).siblings("label").addClass("focused");
})).on('blur','div.inlined2 input#email',(function(){
if($(this).val()==""){
$(this).siblings("label").removeClass("focused").removeClass("blured");
}else{
$(this).siblings("label").removeClass("focused").addClass("blured");
}
}));

// play/pause video
function playpause(){
var bkgvideo = document.getElementById("bkg_video");

if(bkgvideo.paused){
bkgvideo.play();
$('.playpause').removeClass('play').addClass('pause');
}else{
bkgvideo.pause();
$('.playpause').removeClass('pause').addClass('play');
}
}
$('.videobackground').on('click', '.playpause', playpause);
$('#houseSlider').click(function(){
$("#houseSlide").animate({'margin-left' : '-300px'},{queue:true, duration:400, easing:'swing'});
});
