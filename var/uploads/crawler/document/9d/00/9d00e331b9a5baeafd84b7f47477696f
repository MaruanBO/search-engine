<script type="text/javascript">
/*<![CDATA[*/

if (document.getElementById("deferredScripts")) {
var deferredJS = document.getElementById("deferredScripts").innerHTML;
deferredJS = deferredJS.substr(5).replace(/^\*+/, '');
