<script type="text/javascript">
function getCookie(c_name)
{
var i,x,y,ARRcookies=document.cookie.split(";");
for (i=0;i<ARRcookies.length;i++)
  {
  x=ARRcookies[i].substr(0,ARRcookies[i].indexOf("="));
  y=ARRcookies[i].substr(ARRcookies[i].indexOf("=")+1);
  x=x.replace(/^\s+|\s+$/g,"");
  if (x==c_name)
    {
    return unescape(y);
    }
  }
}

function setCookie(c_name,value,exdays)
{
var exdate=new Date();
exdate.setDate(exdate.getDate() + exdays);
var c_value=escape(value) + ((exdays==null) ? "" : "; expires="+exdate.toUTCString());
document.cookie=c_name + "=" + c_value + "; path=/";
}

function checkCookie()
{
	
		var urlclickid = null;
	
	
	if(urlclickid != null && urlclickid > '')
	{	setCookie("clickid",urlclickid,15); }
}

function setCookieInput()
{

	jQuery("#clickid").val(getCookie('clickid'));
}

/* Cookie Handling for Commission Junction Integration. GAG-1744  */
 
 
 /* Check If URL contains 'ref', Create cookie for commission junction   */
function checkCJCookie()
{
	
		var urlclickid = null;
	
	
	if(urlclickid != null && urlclickid > '')
	{	
		var cookieName = "SOURCE";
		var cookieValue  = "CJ";
		var maxAge = "86400";
		maxAge = maxAge / (24 * 60 * 60);
		setCookie(cookieName,cookieValue,maxAge); }
}

/* set cookie for commission junction input */
function setCJCookieInput()
{
	var cookieName = "SOURCE";
	jQuery("#cjClickId").val(getCookie(cookieName));
}

/* End of GAG-1744  */

jQuery(document).ready(function () {
	checkCookie();
	/* Added for GAG-1744, Commission Junction Integration */
	checkCJCookie();
});
</script>








    



	

	
		

