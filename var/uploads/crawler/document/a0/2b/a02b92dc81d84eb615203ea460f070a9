<script type="text/javascript">
	jQuery(document).ready(function(){
		
		//var footerTop = $('#wrapper').innerHeight() - 1000;
		
		//alert(footerTop);
		createForeseeCookie("fsrInviting","false");
		jQuery(window).scroll(function() {
			if(jQuery(document).scrollTop() > 350) {
				jQuery('.returnToTop a').fadeIn('slow'); 
			}
			
			if(jQuery(document).scrollTop() < 350 ) {
				jQuery('.returnToTop a').fadeOut('slow'); 
			}
			
			/*if(jQuery(document).scrollTop() > footerTop ) {
				jQuery('.returnToTop a').fadeOut('slow'); 
			}*/
		});
		
		$('.uptoMini').click(function(){
			$('html, body').animate({scrollTop:0}, 'slow');
			return false;
		});
	});
	function createForeseeCookie(c_name,c_value)
	{
		if(!checkCookieExist(c_name)) { 
			document.cookie=c_name + "=" + c_value + "; path=/";
		}
		//document.cookie = "foreseeModalOpen=false";
	}
	function checkCookieExist(c_name){
		var i,x,y,ARRcookies=document.cookie.split(";");
		var cookieExist = false;
		for (i=0;i<ARRcookies.length;i++)
		  {
		  x=ARRcookies[i].substr(0,ARRcookies[i].indexOf("="));
		  y=ARRcookies[i].substr(ARRcookies[i].indexOf("=")+1);
		  x=x.replace(/^\s+|\s+$/g,"");
		  if (x==c_name)
		    {
			  cookieExist = true;
		    }
		  }
		return cookieExist;
	}
</script>

