	//var searchSuggestURL = "/on/demandware.store/Sites-Godiva-Site/default/Search-GetSuggestions";	
	var searchSuggestURL ="/on/demandware.store/Sites-Godiva-Site/default/SiteSearchSuggestions-Show";
	
	jQuery(document).ready(function() {
		
		// Copied from Prototype.js
		var KEY_RETURN = 13;

		// Create an empty function if the user is able to interact with the page before onDOMReady.
		var EMPTY_FUNCTION = function () {};
		
		// Better safely cover the function declarations.		
		submitSearch = EMPTY_FUNCTION;
		
		// Cache the selectors
		var $searchInput = jQuery(document.getElementById("searchinput"));
		
		var $siteSearchContainer = jQuery(document.getElementById("sitesearchcontainer"));
		var $searchInput = jQuery(document.getElementById("searchinput"));
		var $simpleSearchForm = jQuery(document.getElementById("SimpleSearchForm"));
						
			//app.searchsuggest.init("SimpleSearchForm", "searchinput", "Search", "suggestions", searchSuggestURL, searchSuggestURL1);
			app.searchsuggest.init("SimpleSearchForm", "searchinput", "Search", "suggestions", searchSuggestURL);
		// Submits the search hints
		
		var currentPosition , newPosition , scrollDocument;
		//API to scroll the document
		scrollDocument = function(){
			currentPosition = $(document).scrollTop();
			newPosition = currentPosition - $("#header-main-container").height()-($("#navigation").height()/3);
			//newPosition = currentPosition - $("#header-main-container").height();
		  	$(document).scrollTop(newPosition);
		  	$( document ).off('scroll',scrollDocument);
		}
		$(document).on('scroll',scrollDocument);
		
		
		submitSearch = function () {
			var searchVal = $searchInput.val();		
			if (searchVal.length > 0 && $(".simplesearchinput").val() !='Search') {				
				$simpleSearchForm.submit();	
				$(".simplesearchinput").css("color","#472d27");
			} else {
				$(".simplesearchinput").val('Search').css("color","#ff0000");
				return false;
			}			
		};
		//placeholder for ie
		jQuery('[placeholder]').focus(function() {
				var input =jQuery(this);
				if (input.val() == input.attr('placeholder')) {
				input.val('');
				input.removeClass('placeholder');
				}
				}).blur(function() {
				var input = jQuery(this);
				if (input.val() == '' || input.val() == input.attr('placeholder')) {
				input.addClass('placeholder');
				input.val(input.attr('placeholder'));
				}
				}).blur().parents('form').submit(function() {
				jQuery(this).find('[placeholder]').each(function() {
				var input = jQuery(this);
				if (input.val() == input.attr('placeholder')) {
				input.val('');
				}
				})
				});	
		
	});

//--></script>

