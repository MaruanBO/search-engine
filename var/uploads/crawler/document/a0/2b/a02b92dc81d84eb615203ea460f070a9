<script type="text/javascript">

var loadCarousel=function(){
	// toggle bottom slider			
	var imgDeskWh, swipeON,PortLandscape;
	
	if( $('#wrapper').width() < 768 ) {	
		if(window.innerHeight > window.innerWidth){PortLandscape = 180}
		else{PortLandscape = 210}
		imgDeskWh = 2;
		swipeON = true;
	}else {		
		if(window.innerHeight > window.innerWidth){PortLandscape = 220}
		else{PortLandscape = 260}
		imgDeskWh = 4;
		swipeON = false;
	}
	
	
	$('#home-bottom-slider').carouFredSel({
		responsive: true,
		width: "100%",
		align: "center",
		height: parseInt(PortLandscape),
		circular: true,
		infinite: false,
		mousewheel: swipeON,
		scroll: 4,
		swipe: {
			onMouse: swipeON,
			onTouch: swipeON
		},
		items: {
			visible: {
				height: parseInt(PortLandscape),
				min: 2,
				max: 4
			}
		},
		
		scroll: {
			wipe: true,
			items: imgDeskWh,
			pauseOnHover: true
		},
		auto: {
			play: false
		},
		prev: { button : function() {
            return $(this).parents("#product-slider").find("#slide-prev");
		}},
		next: { button :  function() {
            return $(this).parents("#product-slider").find("#slide-next");
       	}},
		pagination: { 
			container   : function() {
	            return $(this).parents("#product-slider").find(".slider-control");
	        }
		}
	});			
}

jQuery(window).load(function() {
	loadCarousel();
});


</script>
 
	
