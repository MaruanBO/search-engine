                       var idleInterval = setInterval("timerIncrement()", 60000); // After Each minute update the cookie value.                 
              })            
              // Set the Time Interval
                     function timerIncrement() 
                     {
                           var dynURL = '/on/demandware.store/Sites-Godiva-Site/default/KeepSessionAlive-Start'; 
                           
                           var allcookies = document.cookie;
                           // Get all the cookies pairs in an array
                              cookiearray  = allcookies.split(';');
                              // Now take key value pair out of this array
                              for(var i=0; i<cookiearray.length; i++){
                                 name = cookiearray[i].split('=')[0];
                                 value = cookiearray[i].split('=')[1];
                                 
                                 if(name.trim().indexOf("SessionTimeoutCookie")==0) {
                                   break;
                                 }
                                   
                              }
                              value = parseInt(value) + 1;                           
                              document.cookie='SessionTimeoutCookie=' +value+ '; path=/';
                               if (value > 27) // 27 minutes - after 28 minutes of Idle Time a dummy Pipeline is invoked.
                               { 
                                    loadXMLDoc(dynURL); 
                               }
                        }
                     
