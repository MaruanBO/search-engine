            <section id="home_feed">
                <div class="cntr">
                        <!-- Carousel -->
                        <ul class="slides">
                            <!-- Panel 1 -->
                            <li class="slide panel1" data-title="Home">

    <!-- Col 1 -->
    <div class="col single first">
        <article>
