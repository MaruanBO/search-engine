		$('#main-navbar a.show').on('click', function(e) {
			e.preventDefault();
			
			var container = $(this).next();
			if (container.css('display') == 'block')
			{
				container.slideUp(250);
			}
			else
			{
				container.slideDown(250);
			}
			
		});
		

