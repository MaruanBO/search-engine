      if (a[i].className) {
        c.className = a[i].className;
      }
      a[i].parentNode.insertBefore(c, a[i].nextSibling);
      c.style.position = "relative";
      c.style.width=a[i].width + "px";
      d.style.position = "absolute";
      d.style.bottom = "2px";
      c.appendChild(a[i]);
      c.appendChild(d);
      i++;
    }
  }
})();
}
