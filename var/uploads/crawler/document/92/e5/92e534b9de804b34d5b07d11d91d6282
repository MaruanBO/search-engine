<script>

    var what_radio_selected = 1;

    function processJerry(name) {

        if (name == "jerry-doyle") {

            if (what_radio_selected == 1) {
                var val = cleanMastString($('#radio-form-check-val-1').val());
            } else {
                var val = cleanMastString($('#radio-form-check-val-2').val());
            }


            $.get('/api/radio/legit', function () {
                window.location = '/lg/radio?submitted_radio=true&mmx_radio_code=' + val;
            });

        } else {

            window.location = '/api/ban_ip_from_radio';

        }

    }


    function cleanMastString(string) {
        return string.replace(/[^A-Za-z]/g, "").trim().toLowerCase();
    }

    function checkMastSubmit(string) {
        switch (cleanMastString(string)) {
            case 'jerry':
            case 'jerrydoyle':
            case 'jerry doyle':
            case 'doyle':
            case 'gata':
                return true;
        }
        return false;
    }
    ;


    $(function () {

        $('.marquee').marquee({duration: 9000});

        $('#radio-form-check-1').submit(function (e) {
            if (e.preventDefault) {
                e.preventDefault()
            }
            else {
                e.stop()
            }
            ;
            e.returnValue = false;
            e.stopPropagation();
            var val = cleanMastString($('#radio-form-check-val-1').val());
            if (checkMastSubmit(val)) {

                what_radio_selected = 1;

                if (val == "jerry") {
                    //show modal to select name
                    $('#select-correct-jerry').modal();
                } else {
                    $.get('/api/radio/legit', function () {
                        window.location = '/lg/radio?submitted_radio=true&mmx_radio_code=' + val;
                    });
                }

            }
            else {
                alert('Code not valid, please try again.');
            }
        });

        $('#radio-form-check-2').submit(function (e) {
            if (e.preventDefault) {
                e.preventDefault()
            }
            else {
                e.stop()
            }
            ;
            e.returnValue = false;
            e.stopPropagation();
            var val = cleanMastString($('#radio-form-check-val-2').val());
            if (checkMastSubmit(val)) {
                what_radio_selected = 2;

                if (val == "jerry") {
                    //show modal to select name
                    $('#select-correct-jerry').modal();
                } else {
                    $.get('/api/radio/legit', function () {
                        window.location = '/lg/radio?submitted_radio=true&mmx_radio_code=' + val;
                    });
                }
            }
            else {
                alert('Code not valid, please try again.');
            }
        });
    });
</script>

