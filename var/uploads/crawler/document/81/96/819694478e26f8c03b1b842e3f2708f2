		var promoslider = $("#index-promos").data('royalSlider');
		$('#promo-arrows-prev').click(function(){ promoslider.prev(); });
		$('#promo-arrows-next').click(function(){ promoslider.next(); });

		if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) { } else {

			var promoslider = $("#index-promos").data('royalSlider');
			promoslider.ev.on('rsAfterSlideChange', function(event) {
				$({blurRadius:10}).animate({blurRadius:-1}, { // the negative number brings things back into focus on safari
					duration: 500,
					easing: 'swing',
					step: function() {
						$('.rsActiveSlide').find('.promo-blur').css({
							"-webkit-filter": "blur("+this.blurRadius+"px)",
							"-moz-filter": "blur("+this.blurRadius+"px)",
							"-o-filter": "blur("+this.blurRadius+"px)",
							"-ms-filter": "blur("+this.blurRadius+"px)",
							"filter": "blur("+this.blurRadius+"px)"
						});
					}
				});
			});

		};

	});
