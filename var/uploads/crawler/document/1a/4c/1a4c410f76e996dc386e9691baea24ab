		ids : new Array(47923, 47745, 46263)
	},
	init : function() {
		idgeBV.fpVideo.droidVids = new Object();
		idgeBV.fpVideo.droidVids[47923] = {
			poster : "http://images.techhive.com/images/article/2015/02/arm-100566734-poster.jpg",
			plur : "/video/raw.do?id=47923"
		};
		idgeBV.fpVideo.droidVids[47745] = {
			poster : "http://images.techhive.com/images/article/2015/02/wtu-wide-full-100566949-poster.jpg",
			plur : "/video/raw.do?id=47745"
		};
		idgeBV.fpVideo.droidVids[46263] = {
			poster : "http://images.techhive.com/images/article/2014/12/msft-100536999-poster.jpg",
			plur : "/video/raw.do?id=46263"
		};
		
		$("#VideoPlayerMain").html(idgeBV.fpVideo.HTML);
		$("#main-video-playlist").html(idgeBV.fpVideo.playlist.HTML);
		$('.main-video-clickable').click(idgeBV.fpVideo.doClick);
		
		if (idgeBV.isMobile) {
			idgeBV.fpVideo.insertPlayer("47923");
		}
		
	},
	doClick : function (e) {
				
		var id = $(this).attr('data-id') + "";
		$("#VideoPlayerMain").unbind();
		/* FF on OSX ignores the unbind command, so just nuke the whole DOM element ... */
		$("#VideoPlayerMain").replaceWith("<div id=\"VideoPlayerMain\"></div>");
		$("#VideoPlayerMain").html(idgeBV.fpVideo.HTML);
		$("div#eVideoName span").remove(); // removes title above video that was added in bright-vid.js
		idgeBV.fpVideo.insertPlayer(id);
		return false;
	},
	insertPlayer : function(id, volume) {
		$('.playbutton-now').attr({'class' : 'playbutton'});
		$('#playbutton'+id).attr({'class' : 'playbutton-now'});
		var title = $(this).attr('data-title') + "";
		idgeBV.debug("Playing video #" + id);
		
		
		if ("" != "") {
			idgeBV.prerolls[id] = "http://ad4.liverail.com/?LR_PUBLISHER_ID=&ingestCuePoints=true&LR_SCHEMA=vast2-vpaid&LR_AUTOPLAY=0&LR_MUTED=1&LR_CONTENT=6&LR_TITLE="+escape("")+"&LR_VIDEO_ID=&LR_ENVIRONMENT=flash,html5&LR_URL=" + escape(escape(window.location.href));
		} else {
			idgeBV.prerolls[id] = "";
		}
		
		$("#VideoPlayerMain").html(idgeBV.fpVideo.HTML);
		$('#mediaContainer').html('');
		idgeBV.fpVideo.currentPlaylist = new Array();

		/* Make sure the current video is last on the current playlist */
		for (var i = 0; i < idgeBV.fpVideo.playlist.ids.length; i++) {
			if (idgeBV.fpVideo.playlist.ids[i] != id) {
				idgeBV.fpVideo.currentPlaylist.push(idgeBV.fpVideo.playlist.ids[i]);
			}
		}
		idgeBV.fpVideo.currentPlaylist.push(id);
		idgeBV.initPlayer(480, 270, id, "ifw", "mediaContainer47923", idgeBV.fpVideo.currentPlaylist, true, idgeBV.prerolls[id], idgeBV.fpVideo.droidVids[id].plur, idgeBV.fpVideo.droidVids[id].poster, idgeBV.playerConfigs.big, "advancePlayIcon", true, volume);
	}
};

idgeBV.fpVideo.init();

function advancePlayIcon(){
	var getNextItem = false;
	var firstId = "";
	var prevId = "";
	var nextId = "";
	$( ".main-video-playlist-item" ).each(function( index ) {
		if (index == 0){
			firstId = $(this).attr('data-id') + "";
		}
		
	  	if (getNextItem){
	  		nextId = $(this).attr('data-id') + "";
	  		getNextItem = false
	  	}
	  	else if (prevId == "" && $(this).find(".playbutton-now").length) {
	  		prevId = $(this).attr('data-id') + "";
	  		getNextItem = true;
	  	}
	});	
	if (nextId != ""){
		$('#playbutton'+prevId).attr({'class' : 'playbutton'});
		$('#playbutton'+nextId).attr({'class' : 'playbutton-now'});
	}
	else if (prevId != null){
		$('#playbutton'+prevId).attr({'class' : 'playbutton'});
		$('#playbutton'+firstId).attr({'class' : 'playbutton-now'});
	}
}

