    <script>
        $(document).ready(function() {
            function getParameterByName(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results == null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }

            // Error Handling - Guides visitor back to form if there's an error or something is missing
            var error = getParameterByName('trialform');
            if (error == 'submitted') {
                $('#trial_popup').modal('show')
            };

            // Successful submission - opens a confirmation modal on the same page.
            var submitted = getParameterByName('trialsubmit');
            if (submitted == 'true') {
                $('#trial_popup_success').modal('show')  
            };
        });
    </script>

