<!-- Responsive Player -->
<script>
    var widest_cta = 0;
    var playlist_open = false;
    var player_container_width = 570;
    var player_width = 480;
    var player_height = 270;

    var responsive_player = function(){
      var window_width = $(window).width();
      var aspect_ratio = player_width/player_height;
        if (window_width >= player_container_width) {
          $('.video_panel').width(player_width);
          $('.video_panel > span > span').width(player_width)
          $('.video_panel').height(player_height);
          $('.video_panel > span > span').height(player_height).css('line-height', player_height + 'px');
          $('iframe.vidyard_iframe').width(player_width);
          $('iframe.vidyard_iframe').height(player_height);
        } else {
          $('.video_panel').width(window_width-90);
          $('.video_panel > span > span').width(window_width-90);
          $('.video_panel').height(($('.video_panel > span > span').width()/aspect_ratio));
          var new_wrapper_height = $('.video_panel > span > span').width()/aspect_ratio;
          $('.video_panel > span > span').height(new_wrapper_height).css('line-height', new_wrapper_height + 'px');
          $('iframe.vidyard_iframe').width(window_width-90);
          $('iframe.vidyard_iframe').height(($('.video_panel > span > span').width()/aspect_ratio));
        }    	
    }

    $(window).resize(function() {
    	responsive_player();
    });

    $(document).ready(function(){
    	responsive_player();
    });
</script>
<!-- Query String Confirmation of form submission -->
<script>
	$(document).ready(function() {
		function getParameterByName(name) {
		    name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
		    var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
		        results = regex.exec(location.search);
		    return results == null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
		}
		var submitted = getParameterByName('submitted');
		if (submitted == 'true') {
			$('#modal_submitted').modal('show')  
		};
		var caseStudy = getParameterByName('casestudy');
		if ( caseStudy == 'taulia') {
			$('#totm_popup_rt').modal('show')  
		}
	});
</script>

