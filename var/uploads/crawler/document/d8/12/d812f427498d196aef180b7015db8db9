				<script>
    jQuery(document).ready(function () {

         if (app && app.customer && app.customer.previousDevice == 'mobile' ) {
            $('#switch-view').css('display','inline-block');
         }

        //5.10.2013 - Function to open a page in a modal window
        $('.modalLink').click(function (e) {
            e.preventDefault();
            var opts = $.extend(true, {}, app.dialog.settings, {
                width: 500,
                height: 'auto',
                draggable: false
            });
            app.dialog.open({
                url: this.href,
                options: opts
            });
        });

       

    // mIMAX Sku Lookup
    if ($('#pdpMain').length && $.cookie('mimax-storenum')) {
        $('.product-number', '#product-set-list').each(function () {
            var skuArr = $.trim($(this).text()).match(/\d+/),
                sku = skuArr[0] || '';
            if (!sku) return;
            $(this).html('<a href="http://mimax/#sku=' + sku + '">' + sku + '</a>');
        });
        $('span[itemprop="productID"]', '.product-number').each(function () {
            var skuArr = $.trim($(this).text()).match(/\d+/),
                sku = skuArr[0] || '';

            if (!sku) return;
            $(this).html('<a href="http://mimax/#sku=' + sku + '">' + sku + '</a>');
        });
    }

    // Form validation and Ajax submission for e-mail sign-up modal
    function validateemailForm() {
        var x = document.forms["EmailCapture"]["EMAIL_ADDRESS_"].value;
        var atpos = x.indexOf("@");
        var dotpos = x.lastIndexOf(".");
        if (atpos < 1 || dotpos < atpos + 2 || dotpos + 2 >= x.length) {
            $('#EMAIL_ADDRESS_').css('border', '2px solid red');
            return false;
        }
    }

    $('form[name="EmailCapture"]').submit(function (event) {
        event.preventDefault();
        $.ajax({
            type: "POST",
            url: $(this).attr('action'),
            data: $(this).serialize(),
            complete: function () {
                $('#sign-submit, #EMAIL_ADDRESS_, .go-away').hide();
                $('.head-title').html('Thanks!').css({});
                $('.sub-title').html('Watch your email for a 10% off<br>offer in 2-3 days.').css({});
            }
        });
    });
});
</script>

