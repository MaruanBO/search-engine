	(function(){
		var links = document.getElementsByTagName('link'),
			exists = false,
			url = encodeURI("http://demandware.edgesuite.net/aaid_prd/on/demandware.static/Sites-pier1_us-Site/Sites-pier1_us-Library/default/v1424378950833/homepage/css/homepage-bottom-141202.css");

