<script type="text/javascript" language="javascript">

	function setCookie(name, value) {
		if (!name || !value) { return 0; }
		document.cookie = name + "=" + value + ";path=/;max-age=2592000;";
	}

	function readCookie(name) {
		var nameEQ = name + "=";
		var ca = document.cookie.split(';');
		for(var i=0;i < ca.length;i++) {
			var c = ca[i];
			while (c.charAt(0)==' ') c = c.substring(1,c.length);
			if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
		}
		return null;
	}
     
	var emailtakeoverq=readCookie('emailtakeover');

	if (emailtakeoverq != "set") {
	   $( document ).ready(function() {
                if (app.customer.device != 'mobile') {
		  setCookie('emailtakeover','set','1')
		  $('#email-signup').dialog({ width: 775, height: 'auto', modal: true });
                  //s=s_gi(s_account); s.events='event100'; s.linkTrackEvents='event100'; s.tl(true,'o','Email Takeover Impression');
               }
	   });
	}

</script>
