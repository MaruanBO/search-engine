<script>

function formatDate(d){
  function addZero(n){
     return n < 10 ? '0' + n : '' + n;
  }

    return d.getFullYear() +"-"+ addZero(d.getMonth()+1) + "-" + addZero(d.getDate()) + " " + 
           addZero(d.getHours()) + ":" + addZero(d.getMinutes()) + ":" + addZero(d.getSeconds());
}

if ( document.forms["EmailFooter"] || document.forms["EmailCapture"]) {
  
    function validatefooterForm() {
        var x = document.forms["EmailFooter"]["EMAIL_ADDRESS_"].value;
        var atpos = x.indexOf("@");
        var dotpos = x.lastIndexOf(".");
        if (atpos < 1 || dotpos < atpos + 2 || dotpos + 2 >= x.length) {
            $('#footeremailsign > #EMAIL_ADDRESS_').css('border', '2px solid red');
            return false;
        }
    }

    $('form[name="EmailFooter"]').submit(function (event) {
        $.ajax({
            type: "POST",
            url: $(this).attr('action'),
            data: $(this).serialize(),
            complete: function () {
                $('#footeremailsign').replaceWith('<br>Thanks for signing up! Watch your email for a 10% off offer in 3-5 days.');
            }
        });
        return false;
    });

    var emaildate = new Date();
    if (document.forms["EmailCapture"]) document.forms["EmailCapture"]["ONLINE_CUSTOMER_DATE"].value = formatDate(emaildate);
    if (document.forms["EmailFooter"]) document.forms["EmailFooter"]["ONLINE_CUSTOMER_DATE"].value = formatDate(emaildate);  
}

//Dynamic Tile Code 9/2014
 $( "li.dynamic" ).hide( 'fast' );
 
 $('.TopImage').each(function () {
        var $ti = $(this);
        $.ajax({
            url: $ti.closest('a').attr('href') + '&sz=1&source=quicklook&format=ajax',
            dataType: 'html',
            success: function (response) {
                
                var $image = $(' .product-image a img', response).eq(0),
                    src = $image.attr('src');
                 if (!src) return false;
                 src = src.replace(/(.*)sw=\d*&sh=\d*/, '$1sw=' + pis + '&sh=' + pis);
                $('<img src="' + src + '">').addClass('tile-border').appendTo($ti).parent().addClass('stay');
                $( ".TopImage.stay" ).parent().parent().show( 'fast' );
            }
        });
    });
</script>
			</div>
		
		
		
