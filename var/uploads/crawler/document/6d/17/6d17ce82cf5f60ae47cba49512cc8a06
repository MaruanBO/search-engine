              "http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Man-Baby-Laugh.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/sushicouple.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Interview.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Architect.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Spaceboy-Run1.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/sushicouple.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Go-Karts.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Man-Baby-Laugh.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Woman-Car.jpg"  
            ], {duration: 2000, fade:800});
          } 
          if (winW < 950) {
            $('.hero h1').css('display', 'none');
            $.backstretch([
              "http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Woman-Car.jpg"    
            ]);
          }    
      }
    

      $( window ).resize(function() { /* If window resizes, save new width, and if that width is greater than 949px then run backstretch, otherwise stop backstretch */
        clearTimeout(doit);
        doit = setTimeout(resizedbackstretch, 400);

      });

      $(window).on('resize.backstretch', function(){
       // $.backstrech("destroy", false);
      });

      if (winW > 949) {
        $.backstretch([
          "http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Man-Baby-Laugh.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/sushicouple.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Interview.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Architect.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Spaceboy-Run1.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/sushicouple.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Go-Karts.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Man-Baby-Laugh.jpg","http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Woman-Car.jpg"   
        ], {duration: 2000, fade:800});
      } else if (winW < 950) {
        $('.hero h1').css('display', 'none');
        $.backstretch([
          "http://d19zf5dyzdmcsd.cloudfront.net/wp-content/uploads/2014/09/Woman-Car.jpg"    
        ]);
      }

      $(window).on("backstretch.after", function(e, instance, index) {

        if(index >= 8){
          $.backstretch('pause');
        }


        function showNextQuoteIn() {
          var quotes = $(".hero-text");
          
            quotes.eq(index).fadeIn('800');
        }
          showNextQuoteIn();
      });

      $(window).on("backstretch.before", function(e, instance, index) {

         function showNextQuoteOut() {
          var quotes = $(".hero-text");
          
            quotes.eq(index-1).fadeOut('800');          
          }
          showNextQuoteOut();
      });

      $(document).ready(function () {
        $('.explore').delay(900).fadeIn(1000);
      });
      

    })(jQuery);
      


