        jQuery(document).ready(function($) {
          var url = window.location.href;
          var hash = url.substring(url.indexOf("#")+1);
          var date = new Date();
          date.setTime(date.getTime() + (10 * 60 * 1000));
          
                      
              if(hash == 'acorn'){

                $.cookie('showbrand', 'true', { expires : date } );
                $.cookie('brand', 'acorn' , { expires : date } );
              }

            
              if(hash == 'ryan'){

                $.cookie('showbrand', 'true', { expires : date } );
                $.cookie('brand', 'ryan' , { expires : date } );
              }

                      
          
          if($.cookie('showbrand') == 'true'){
            var brand = $.cookie('brand');
            $('.announce').css('display', 'block');
            $('.' + brand).css('display', 'block');
          }


        });


      </script>

      
