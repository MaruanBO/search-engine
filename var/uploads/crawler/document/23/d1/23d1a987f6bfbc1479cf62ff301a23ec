(function(_, $) {
    $.ceEvent('on', 'ce.commoninit', function(context) {
        var col2 = context.find('.dropdown-2columns');
        var col3 = context.find('.dropdown-3columns');
        var col4 = context.find('.dropdown-4columns');
        
        if (col2.length) {
            col2.each(function() {
                var p_ul = $(this).find('ul');
                var col2_max_height = 0;
                p_ul.each(function() {
                    if($(this).height() > col2_max_height){
                        col2_max_height = $(this).height();
                    }                 
                }); 
                p_ul.each(function() {                   
                    $(this).css('height', col2_max_height + 'px');
                }); 
            });                
        }   
        if (col3.length) {
            col3.each(function() {
                var p_ul = $(this).find('ul');
