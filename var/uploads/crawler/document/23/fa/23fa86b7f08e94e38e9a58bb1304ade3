<div id="search-popover-content">
    
</div>

<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/js/jquery-dfp.min.js"></script>
<script type="text/javascript" src="/js/typeahead.min.js"></script>
<script type="text/javascript" src="/js/fancybox/jquery.fancybox.pack.js?v=2.1.5"></script>
<script>

    var winwidth = $( window ).width();
    if (winwidth >= 768) {
        $("#search-nav").click(function(e) {
            e.preventDefault();
        });
        $("#search-nav").popover({
            html: true,
            placement: "bottom",
            trigger: "click",
            content: "<div class='search-popover-style'><form method='get' action='/search' role='form' class='form-inline'><div class='form-group'><label class='sr-only' for='searchOpensnow'>Search</label><input type='text' class='form-control' id='searchOpensnow' name='term' placeholder='Search'><button type='submit' class='btn btn-primary search-popover'>Search</button></div></form></div>"
        });
    }

    
    
    $("#neverAgainSub").click(function() {
        var skiptime = 1000*60*60*24*900;
        var skipexpires = new Date((new Date()).valueOf() +  skiptime);
        document.cookie = "subpopover=true;expires=" +  skipexpires.toUTCString() + ";path=/";
        $('#emailPopover').modal('hide');
    });
    $("#notNowSub").click(function() {
        var skiptime = 1000*60*60*24*7;
        var skipexpires = new Date((new Date()).valueOf() +  skiptime);
        document.cookie = "subpopover=true;expires=" +  skipexpires.toUTCString() + ";path=/";
        $('#emailPopover').modal('hide');
    });

    $('#mc-embedded-subscribe-form').submit(function() {
        $('#mc_embed_signup').hide();
        $('#mceresult-loading').hide();
        $.ajax({
            url: '/snips/subscribeemail',
            type: 'GET',
            data: 'ajax=true&email=' + escape($('#mce-EMAIL-pop').val()) + '&zipcode=' + escape($('#mce-ZIPCODE-pop').val()),
            success: function(jsa) {
                $('#mceresult-loading').hide();
                $('#mceresult-pop').html('Awesome! Thanks for signing up!');
                $('#mceresult-pop').removeClass();
                $('#mceresult-pop').addClass("alert alert-success");
                $('#mc_embed_close').show();
                var skiptime = 1000*60*60*24*900;
                var skipexpires = new Date((new Date()).valueOf() +  skiptime);
                document.cookie = "subpopover=true;expires=" +  skipexpires.toUTCString() + ";path=/";
            },
            error: function(jsa) {
                $('#mceresult-loading').hide();
                $('#mc_embed_signup').show();
                //$('#mceresult-pop').html('Sorry, an error occurred.');
                $('#mceresult-pop').html(jsa.responseJSON.msg);
                $('#mceresult-pop').removeClass();
                $('#mceresult-pop').addClass("alert alert-danger");
            }
        });
        return false;
    });

    $('#feedback-new-form').submit(function() {
        $('#feedback-loading').show();
        $('#feedback-new-form').hide();
        $.ajax({
            url: '/snips/sendfeedback',
            type: 'GET',
            data: 'ajax=true&email=' + escape($('#emailaddress-feedback').val()) + '&currentpage=' + escape($('#currentpage-feedback').val()) + '&useragent=' + escape($('#useragent-feedback').val()) + '&userip=' + escape($('#userip-feedback').val()) + '&feedback=' + escape($('#feedback-feedback').val()),
            success: function(jsa) {
                $('#feedback-loading').hide();
                $('#feedback-result').html('Thanks for your feedback!');
                $('#feedback-result').removeClass();
                $('#feedback-result').addClass("alert alert-success");
                
                $('#feedback-close').show();
            },
            error: function(jsa) {
                $('#feedback-loading').hide();
                $('#feedback-new-form').show();
                $('#feedback-result').html('Sorry, an error occurred.');
                $('#feedback-result').removeClass();
                $('#feedback-result').addClass("alert alert-danger");
            }
        });
        return false;
    });

    $('#search-nav').on('shown.bs.popover', function () {

        $('#searchOpensnow').typeahead({
            name: 'locations',
            remote: '/snips/searchdata?term=%QUERY',
            minLength: 2,
            limit: 5,
            valueKey: "name"
        }).bind('typeahead:selected', function(obj, datum) { 
            window.location.href = datum.link;
        });
        $('#searchOpensnow').focus();
    })

    function pickAdSize() {
        var width = $( window ).width();
        if (width >= 768) {
            $('.adunit-mobile').each(function () {
                $( this ).removeClass( "adunit-active" );
            });
            $('.adunit-web').each(function () {
                $( this ).addClass( "adunit-active" );
            });
            if (width < 992) {
                $('.sidebar .adunit-web').each(function () {
                    $( this ).attr("data-dimensions","200x200");
                });
            }
        } else {
            $('#topad').hide();
            $('.adunit-web').each(function () {
                $( this ).removeClass( "adunit-active" );
            });
            $('.adunit-mobile').each(function () {
                $( this ).addClass( "adunit-active" );
            });
        }
        $('.adunit-both').each(function () {
            $( this ).addClass( "adunit-active" );
        });

        
