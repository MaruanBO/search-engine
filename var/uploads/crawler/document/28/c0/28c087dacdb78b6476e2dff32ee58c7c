            jQuery('.more-thingswelove a').click(function (e) {
            	e.preventDefault();
			    jQuery('.mf-thingswelove-wrap').flexslider("next");
			});

            jQuery('.no-js .slides').removeClass('li:first-child');

        });
    </script><h3 class="home-sc-title thingswelove-title"><a href="/thingswelove">Things We Love</a> <span class="more-thingswelove"><a href="#">More ></a></span></h3>
