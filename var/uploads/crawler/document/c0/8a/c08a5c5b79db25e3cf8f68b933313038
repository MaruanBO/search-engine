<script type="text/javascript">
//<![CDATA[
$(function(){
var name="flash_message"
var cookies = document.cookie;
if (cookies.indexOf(name) != -1)
{
    var startpos = cookies.indexOf(name)+name.length+1; 
    var endpos = cookies.indexOf(";",startpos)-1; 
    if (endpos == -2) endpos = cookies.length;  
    mes=(unescape(cookies.substring(startpos,endpos))).split("+").join(" "); 
    $('#activation_link').show();
    $('#activation_link').html(mes); 
    deleteCookie("flash_message","/;domain=.v3.co.uk") 
    deleteCookie("flash_message");
    }
});
        
//]]>
</script>
<noscript></noscript>
        <script type="text/javascript">
//<![CDATA[
function check_error_cookie(){
         Uname = getCookie("login_error_message")
        if (Uname != null)
        {
        mes=Uname.split("+").join(" ");
        if (mes!="")
        {
        if ($('#login_error_message_teaser')[0]!=null)
        {
        $('#login_error_message_teaser').show();
        $('#login_error_message_teaser').html(mes);                                      }
        if ($('#login_error_message_right')[0]!=null)
        {
        $('#login_error_message_right').show();
        $('#login_error_message_right').html(mes);                                      }}
        deleteCookie("login_error_message","/;domain=.v3.co.uk")
        deleteCookie("login_error_message");
         }
}

//]]>
</script>
