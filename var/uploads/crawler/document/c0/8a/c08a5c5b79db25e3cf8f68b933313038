<script type="text/javascript">
        function flameAuthor_submission(){
    $.ajax({
    type: "POST",
    url: '/home/flame_article_author        ',
        data: $("#flameid").serialize(),
        dataType: "text",
        beforeSend: function(){
        },
        error: function(){
        },
        success: function(update_data){
        if (update_data.match(/Errors\-(.*)/)) {
        var a = update_data.split('Errors-')
        $(".ui-dialog-buttonpane,.ui-dialog,.ui-widget-overlay").show();
        $("#flame_author_message").html(a[1]);
        }
        else {
        location.reload();
        }
        }
        });
        }

        $(function(){
        $("#flame_author_id>a").click(function(event){
        event.preventDefault();
        jQuery("#flame_author").dialog("destroy");
        $("#flame_author").dialog({
        modal: true,
        buttons: {
        Cancel: function(){
        $(this).dialog('close');
        },
        'Submit': function(){
        $(".ui-dialog-buttonpane,.ui-dialog,.ui-widget-overlay").hide();
        flameAuthor_submission();
        }
        }
        })
        $(".ui-widget-overlay").css({
        'opacity': '0.3'
        });
        });

        });
</script>
