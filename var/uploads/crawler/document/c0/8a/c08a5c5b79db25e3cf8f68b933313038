		<script type="text/javascript">
//<![CDATA[

$(function(){
    $.ajaxSetup({
      attemptCount: 0,
      attemptLimit: 2,
        error: function (jqXHR, textStatus, errorThrown) {
            if (jqXHR.status == 500 ||jqXHR.status == "500" ) {
                var s = this; // The config we used
                s.attemptCount++;
                    if (s.attemptCount < s.attemptLimit) {
                        s.type="GET";
                        $.ajax(s);
                    }
                }    
      }
    });
});
$(function(){
if (show_login_if_not_logged_in()){
$.ajax({
   type: "POST",
   url: "/home/user_info",
   complete:function(xmlHttp){
     if (xmlHttp.status != 500 || xmlHttp.status != "500" ) {
        $("#login_form_ajax_update").html(xmlHttp.responseText);
        $('#login_form_ajax_update').show();
        $('#login_form_status_box').hide();
    }
    check_error_cookie();
   }
 });            
}
});
function show_login_if_not_logged_in() 
{
    if ((getCookie("logged_in") == "true") || (getCookie("rem_id")!=null)|| (getCookie("logged_in") == null))
    { 
        return true; 
    } 
    else  
    {  
        if($('#login_form_ajax_update')[0]){
            $('#login_form_ajax_update').show();
            $('#login_form_status_box').hide();
        } 
    check_error_cookie();
        //_tag.dcsCollect();
        return false; 
    } 
} 
//]]>
</script>
