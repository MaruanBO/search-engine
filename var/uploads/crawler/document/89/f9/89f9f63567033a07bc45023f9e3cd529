	    function prepopuletaDestination() {
	    	var urlHotelName = window.location.pathname.split("/").pop();

			if (urlHotelName == "norwalk-ct") {
				var hotelCode = "orqev";
			} else if (urlHotelName == "rockville-md"){
				var hotelCode = "wasrk";
			} else {
				var hotelCode = "";
			}

			jq('#closedSearchHotelMnemonic').val(hotelCode);
	    }
	    
	    function updateFormAction() {

	    	var brand = trackingJson.brand.substring(0,2).toUpperCase();
	    	var hotelMnemonicValue = jq('#closedSearchHotelMnemonic').val();
  	
			if(brand == "VN" && hotelMnemonicValue != "" && typeof hotelMnemonicValue != 'undefined') {
				var templateUrl = jq("#roomsRatesURL").val();
				var value = jq('#closedSearchHotelMnemonic').val()
				templateUrl = templateUrl.replace("%s", value).replace("%s", value);
				jq("#resMod").attr('action', templateUrl);
			} 
	    }
	</script>
	 

	
