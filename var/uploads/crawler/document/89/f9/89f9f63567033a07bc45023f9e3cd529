    <script type="text/javascript">
        jQuery(document).ready(function() {

            
            jQuery("#UHF_countryLang_countrySelector").change(function(){
                jQuery('#UHF_countryLang_BusyIcon').css('display', 'inline-block');
                UHF.loadLanguages('http://www.ihg.com/evenhotels/hotels/us/en/walletServlet', 'vn', '', 'en','getLanguages', 'sg');
            });

            jQuery('#UHF_countryLang_Flag').attr('title', jQuery('#UHF_countryLang_countrySelector option:selected').text());
            jQuery('#UHF_countryLang_Flag').attr('alt', jQuery('#UHF_countryLang_countrySelector option:selected').text());
            jQuery('#UHF_countryLang_countrydisp').html( jQuery('#UHF_countryLang_countrySelector option:selected').text());

            
            UHF.clearTrackerCookie();
            
            UHF.setUpMegaMenuTeaserContent('http://www.ihg.com/evenhotels/hotels/us/en/walletServlet');
            try{
                if('ANONYMOUS' === 'EXPLICIT'){                   
                    UHF.setUpSessionTimeOut('http://www.ihg.com/evenhotels/hotels/us/en/walletServlet', '600', '120', '300');
                }   
            }catch(e){              
                if(console){
                    console.log('Error setting up session time out : ' + e);
                }
                // Don't worry if Session time out is not working.
            }
            
            
            jQuery("[name=UHF_countryLang_btnOKbuttonText]").click(function() {
                // Submit the form.
                jQuery('#UHF_countryLang_BusyIcon').css('display', 'inline-block');
                
                var country = jQuery("#UHF_countryLang_countrySelector").val().toLowerCase();
                var language = jQuery("#UHF_countryLang_langSelector").val().toLowerCase();

                UHF.postCountryLanguageFlag('http://www.ihg.com/evenhotels/hotels/cdcGen', country, language);
            });
            
        });
    </script>

