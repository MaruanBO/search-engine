<script type="text/javascript">
	var controllerName = "reservationhome";
	var urlType = "false";

	function deferredLoad() {
		// Global JavaScript: External and Third-Party Code
		if (!document.getElementById('gs_globalScript')) {
			var globalScriptElem = document.createElement('script');
			globalScriptElem.type = "text/javascript";
			globalScriptElem.id = "gs_globalScript";
			globalScriptElem.src = "https://www.ihg.com/evenhotels/hotels/us/en/reservation/global_javascript/global_javascript.cache.js?BUILD_TIME=1424206843888";
			globalScriptElem.onloadDone = false;
			globalScriptElem.onload = function() {
				if (!globalScriptElem.onloadDone) {
					globalScriptElem.onloadDone = true;
				}
			};
			globalScriptElem.onreadystatechange = function() {
				if (("loaded" === globalScriptElem.readyState || "complete" === globalScriptElem.readyState) && !globalScriptElem.onloadDone) {
					globalScriptElem.onloadDone = true;
				}
			}
			var head = document.getElementsByTagName('head')[0];
			if (head) {
				head.appendChild(globalScriptElem);
			} else {
				document.getElementsByTagName('body')[0].appendChild(globalScriptElem);
			}
		}
	}
	setTimeout(deferredLoad, 6000);
</script>
	


	
	
	
	
		
	
















	

	
