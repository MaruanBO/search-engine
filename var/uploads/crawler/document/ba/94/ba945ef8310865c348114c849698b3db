function openContextChooser(url){
$.fn.colorbox({
href:url,
scrolling: false,
overlayClose: false,
escKey: false,
close: function() {
var img = "<img id='cboxCloseImg' src='/dotcom/images/modal_close.gif' alt='close' title='close' />";
return $(img);
},
onComplete: function () {
$('#cboxLoadedContent .closeModal').bind("click", function () {
$('#cboxClose').trigger("click");
})
}
});
}
