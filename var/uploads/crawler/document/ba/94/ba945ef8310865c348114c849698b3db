$(this).removeClass("hoverClass");
}
});
});

function trackPageLoadTime(pageAction)
{
if ($('#enablePageLoadTracker').html() == 'true') {
var d= new Date();
var hours=d.getHours(),
minutes=d.getMinutes(),
seconds=d.getSeconds();
var formattedTime = pad(hours) + ":" + pad(minutes) + ":" + pad(seconds) + " ";
(new Image()).src ='/dotcom/images/tracker.gif?orderId='+$('#orderId').html()+'|--ActionPerformed='+pageAction+'|--Time='+formattedTime;
}
}
function pad(d){
return (d < 10 ? "0" : "") + d;
}
function getItemCountFromCookie(){
var quantity = getCookie("itemCount");
if(quantity == null){
quantity = 0;
}
return quantity;
}
