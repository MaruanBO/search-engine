function loadShoppingBagContents(){
var content = jQuery.trim($('#shopping_bag_flyout_content').html());
if (content.length == 0 ) {
var actionUrl = $('#bagContents').attr('action');
var dataToSend = $('#bagContents').serialize();
$.ajax( {
url :actionUrl,
type :"POST",
data :dataToSend,
success : function(data) {
paintBagFlyOut(data);
$('#shopping_bag').trigger('mouseover');
}
});
}
}
function loadShoppingBagContentsForProduct(){
var content = jQuery.trim($('#shopping_bag_flyout_content').html());
if (content.length == 0 ) {
var actionUrl = $('#bagContents').attr('action');
var dataToSend = $('#bagContents').serialize();
$.ajax( {
url :actionUrl,
type :"POST",
data :dataToSend,
async : false,
success : function(data) {
paintBagFlyOut(data);
}
});
}
}
function paintBagFlyOut(data){
if(bagClicked){
window.location.href = '/dotcom/jsp/cart/viewShoppingBag.jsp'
}else{
cartDataLoaded = true;
}
$('#shopping_bag_flyout_content').html(data);
/*on mouseover of the "my bag" show the shopping flyout */
var shoppingBagFlyout = $('#shopping_bag_flyout');
if(!jcp.isTabletOrMobile()) {
$('#shopping_bag').bind('mouseover',
function() {
var quantity = getCookie("ItemCount");
var flyoutLength = $('.shopping_details').length;
if (flyoutLength > 2) {
if (flyoutLength == 3) {
$('#shopping_scroll').addClass("shopping_bag_fixed_height3");
} else {
$('#shopping_scroll').addClass("shopping_bag_fixed_height4");
}
$('#shopping_scroll').parent().css('padding-right', '0');
}
if (shoppingBagFlyout.length > 0) {
var shopping_anchor = $(this).parent();
var anchorPosition = shopping_anchor.position();
var topPos = anchorPosition.top + shopping_anchor.height();
if($('#wrapperId').length > 0) topPos += $('#wrapperId').scrollTop();
shoppingBagFlyout.css('left', anchorPosition.left - shopping_anchor.width() + -64 + 'px');
shoppingBagFlyout.css('top', topPos + 'px');
shoppingBagFlyout.css('margin-top', '-1px');
var itCnt = getItemCountFromCookie();
var bagCount = parseInt(itCnt);
shoppingBagFlyout.show();
$("#orderItemCount").html(bagCount);
/* adding item in bag label */
if(bagCount > 0){
$('#items_in_bag_label').html('<h4 class="redBagLabel">items added to bag</h4>');
$('.shopping_kit #shopping_scroll').css('border-top-width','2px');
$('.shopping_kit_holder #shopping_scroll > .red_button_medium').css('position','initial').css('top','initial');
}else{
$('#items_in_bag_label').html('<h4 class="grayBagLabel">your bag is empty</h4>');
$('.shopping_kit #shopping_scroll').css('border-top-width',0);
$('.shopping_kit_holder #shopping_scroll > .red_button_medium').css('position','relative').css('top','-30px');
}
$(this).addClass("hoverClass");
}
});
shoppingBagFlyout.bind('mouseover', function() {
if (shoppingBagFlyout.length > 0) {
shoppingBagFlyout.show();
$('#shopping_bag').addClass("hoverClass");
}
});
shoppingBagFlyout.bind('mouseleave', function() {
if (shoppingBagFlyout.length > 0) {
shoppingBagFlyout.hide();
$('#shopping_bag').removeClass("hoverClass");
}
});
$('#shopping_bag').bind('mouseout', function() {
if (shoppingBagFlyout.length > 0) {
shoppingBagFlyout.hide();
$(this).removeClass("hoverClass");
}
});
$('#shopping_bag').mouseenter(function() {
if (shoppingBagFlyout.length > 0) {
console.log('In globalNavHeader.jsp.paintBagFlyOut(); jcpPRODUCTPRESENTATIONSjcp = ' + jcpPRODUCTPRESENTATIONSjcp);
}
});
/* adding coremetrics tags on the content slot click event */
$('div#shopping_bag_flyout > div.shopping_kit div.shopping_marketing_promo').delegate('a', 'click', function(){
cmCreateElementTag('content banner','shopping bag preview');
});
}
}
