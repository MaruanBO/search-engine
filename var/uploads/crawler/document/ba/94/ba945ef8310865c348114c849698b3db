//move link CA transparency to about us per DP-4520 comp
$(document).ready(function(){
$('.ft_customer_service ul li').each(function(){
if($(this).children('a').html().indexOf('CA transparency in supply chain ') >= 0 ) {
$(this).insertAfter($('.ft_about_us ul li').last());
return false;
}
