    /* <![CDATA[ */

        var StarStruckPath = 'http://www.bonappetit.com/wp-content/themes/bonappetit-2.0.0/i/ratings';


    jQuery(function($) {
        $('.starstruck').ready(function(){
            StarStruckLoadAjax();
        });

        $('.starstruck').raty({
            path: StarStruckPath,
            hints: ['poor', 'ok', 'average', 'good', 'awesome!'],
            score: StarStruckScore,
                    click: StarStruckAjax,
                });

        $('.starstruck-mini').raty({
            space: false,
            readOnly: true,
            path: StarStruckPath,
            score: StarStruckScore
        });

        $('.starstruck-mini-wrap').fadeIn(1000);
    });

    function StarStruckAjax(score, evt) {
        var id = jQuery(this).attr('id');
        jQuery.ajax({
            type: 'POST',
            dataType: 'json',
            context: this,
            data: 'action=starstruck_action&nonce=e7ca087681&score=' + score + '&id=' + id + '&type=' + jQuery(this).data('type'),
            url: '/wp-admin/admin-ajax.php',
            error: function(XMLHttpRequest, textStatus, errorThrown) {
                            },
            success: function(data) {
                jQuery('#votes_'+id).html(data.votes).fadeIn('slow');
                jQuery('#rating_'+id).html(data.avg).fadeIn('slow');
                jQuery('#hint_'+id).html(data.user_vote).fadeIn('slow');
            }
        });
        jQuery(this).fadeOut(function() { jQuery(this).fadeIn(); } );
    }

    function StarStruckLoadAjax() {
        var id = jQuery('.starstruck').attr('id');
        jQuery.ajax({
            type: 'POST',
            dataType: 'json',
            data: 'action=starstruck_load_action&nonce=2e9b6c3648&id=' + id,
            url: '/wp-admin/admin-ajax.php',
            error: function(XMLHttpRequest, textStatus, errorThrown) {
                            },
            success: function(data) {
                var userVote = data.user_vote !== null ? data.user_vote : "NONE";
                jQuery('#votes_'+id).html(data.votes).fadeIn('slow');
                jQuery('#rating_'+id).html(data.avg).fadeIn('slow');
                jQuery('#hint_'+id).html(userVote).fadeIn('slow');
                jQuery('.starstruck-wrap').find('.first-load').removeClass('first-load');
                jQuery('.starstruck').raty('score', data.avg);
                jQuery('.starstruck').fadeOut(function() { jQuery(this).fadeIn(); } );
            }
        });
    }

    function StarStruckScore() {
        return jQuery(this).attr('data-rating');
    }
    /* ]]> */
    </script>

