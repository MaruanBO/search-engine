function searchReports(){
     newloc = "/search/reports/"+ encodeURI(jQuery('#reportsSearchKeyword').val());
     window.location = newloc;
     return false;
}
function clearReportsSearchKeyword(){
if( jQuery('#reportsSearchKeyword').val() == "ENTER KEYWORD") jQuery('#reportsSearchKeyword').val('');
}
</script>
