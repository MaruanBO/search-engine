// Set Twitter override text
 Drupal.settings.oBeaconfireGlobalJs.twitter_text = jQuery.trim(Drupal.settings.oBeaconfireGlobalJs.twitter_text);
Drupal.settings.oBeaconfireGlobalJs.twitter_text = Drupal.settings.oBeaconfireGlobalJs.twitter_text != "" ? " " + Drupal.settings.oBeaconfireGlobalJs.twitter_text : "";
Drupal.settings.oBeaconfireGlobalJs.twitter_via_name =  jQuery.trim(Drupal.settings.oBeaconfireGlobalJs.twitter_via_name);

// Set Twitter Text from og:title if available
Drupal.settings.oBeaconfireGlobalJs.page_og_title = jQuery("meta[property='og:title']"); // Try to get page title from OG tag
if (Drupal.settings.oBeaconfireGlobalJs.page_og_title.length > 0) {
  Drupal.settings.oBeaconfireGlobalJs.page_og_title = jQuery.trim(Drupal.settings.oBeaconfireGlobalJs.page_og_title.attr("content"));
  if (!Drupal.settings.oBeaconfireGlobalJs.twitter_hide_site_name) {
    Drupal.settings.oBeaconfireGlobalJs.page_og_title = Drupal.settings.oBeaconfireGlobalJs.page_og_title + " | " + Drupal.settings.oBeaconfireGlobalJs.site_name;
  }
}
else { // Get page <title>
  Drupal.settings.oBeaconfireGlobalJs.page_og_title = jQuery("title").text();
  // Hide site name
  if (Drupal.settings.oBeaconfireGlobalJs.twitter_text != "" || Drupal.settings.oBeaconfireGlobalJs.twitter_hide_site_name) {
    Drupal.settings.oBeaconfireGlobalJs.page_og_title = Drupal.settings.oBeaconfireGlobalJs.page_og_title.replace(" | " + Drupal.settings.oBeaconfireGlobalJs.site_name,"");
    Drupal.settings.oBeaconfireGlobalJs.page_og_title = jQuery.trim(Drupal.settings.oBeaconfireGlobalJs.page_og_title);
  }
  // Keep site name
  else {
    Drupal.settings.oBeaconfireGlobalJs.page_og_title = jQuery.trim(Drupal.settings.oBeaconfireGlobalJs.page_og_title);
    
  }
}

var addthis_share = addthis_share || {};
addthis_share = {
    "passthrough" : {
      "twitter": {
        "via": Drupal.settings.oBeaconfireGlobalJs.twitter_via_name, // Will be replaced with @TWITTER-HANDLE as set in Config GUI
        "text": Drupal.settings.oBeaconfireGlobalJs.page_og_title + Drupal.settings.oBeaconfireGlobalJs.twitter_text,
      }
    }
}
var addthis_config = {
  "data_track_addressbar":true
};

