<script>
if(!window.cookiesEnabled) {
	window.cookiesEnabled = (function() {
		var r = (navigator.cookieEnabled) ? true : false
		if (typeof navigator.cookieEnabled == "undefined" && !cookieEnabled) { 
			document.cookie="t";
			r = (document.cookie.indexOf("t") != -1) ? true : false
		}
		return r;
	}());
}

jQuery(document).ready(function() {
	
	if
	(
		// Don't even bother if the use has cookies turned off
		!window.cookiesEnabled
		// or if they haven't seen the newsletter signup popup yet
		|| jQuery.cookie('NLInlinePopup') === null
		// or if they have seen the newsletter signup but did not click
		// "no thanks" (they converted or clicked 'remind me later')
		|| jQuery.cookie('NLInlinePopup') != 'nothanks'
		// or if they have seen the newsletter signup and clicked
		// "no thanks" but they did this during this session (we 
		// don't want this overly to show until the NEXT session).
		|| jQuery.cookie('NLInlinePopup2') !== null
		// or if they have seen this popup already
		|| jQuery.cookie('DggPrintOfferOverlay') !== null
	)
	{
		return;
	}
	
	// User clicked somewhere, do we need to close the overlay?
	jQuery('#DggPrintOfferOverlay').click(function(event) {

		console.dir(event.target);

		if
		(
			// User clicked shadow background
			event.target.className.indexOf('popBg') >= 0
			// or the X/"no thanks" buttons
			|| event.target.className.indexOf('noThanks') >= 0
		)
		{
			event.stopPropagation();
			jQuery('#DggPrintOfferOverlay').hide();
		}
		else if
		(
			// User converted
			event.target.className.indexOf('offerLink') >= 0
			|| jQuery(event.target).parents('.offerLink').length > 0
		)
		{
			event.stopPropagation();
			jQuery('#DggPrintOfferOverlay').hide();
			
			// since .offerLink must always be on an anchor element
			// returning true will launch that anchor's href URI
			return true;
		}
		else
		{
			// User clicked anywhere else
			event.stopPropagation();
		}

		// if what was clicked was an anchor, don't load whatever URI is in the href
		return false;

	});

	// Now that the triggers are set up, show the popup
	jQuery('#DggPrintOfferOverlay').fadeIn();

	jQuery.cookie("DggPrintOfferOverlay", 'closed', {path:'/',expires:30,});

});
</script>

