<script type="text/javascript" src="//j.maxmind.com/js/apis/geoip2/v2.0/geoip2.js"></script>
<script type="text/javascript">
    /*  var countryCode = 'no_set'; */
(function(){
    var phoneNumber = '1.877.324.6744';
    var countryCode = 'US';
    var onSuccess = function(geoipResponse){
    countryCode = geoipResponse.country.iso_code;
    if(countryCode == 'GB'){
        phoneNumber = '+44 (0) 203 684 2965';
    } else if(countryCode == 'AU' || countryCode == 'NZ'){
        phoneNumber = '+61 (2) 9078 4481';
    }
    $(document).ready(function(){
        $('.phoneNumber').text(phoneNumber);
    });

    };
    var onError = function(errorResponse){};
    geoip2.country(onSuccess, onError, { w3cGeolocationDisabled: true });
})();
</script>
<!--End of GeoIP code-->

