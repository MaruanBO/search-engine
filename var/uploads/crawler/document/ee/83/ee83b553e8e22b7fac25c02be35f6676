Drupal.behaviors.navHover = function (context) {
  var initial_menu_id = '';
  $('#nav ul li').each(function() { if($(this).hasClass('active')) { var classarr = $(this).attr('class').split(' '); initial_menu_id = classarr[0]; }});
  if(initial_menu_id == '') { $('#menu_spill').css('display','none'); $('#menu_spill').addClass('inactive_start'); }

  $('#nav-container').hover(
    function() {
    },
    function() {
      $('#menu_spill div').css('display','none');
      if(initial_menu_id == '') { $('#menu_spill').css('display','none'); }
      else { $('#menu_spill #topic'+initial_menu_id).css('display','block'); }
    }
  );

  var hovered_id = '';
  $('#nav ul li').hover(
    function() {
      if(initial_menu_id == '') { $('#menu_spill').css('display','block'); }
