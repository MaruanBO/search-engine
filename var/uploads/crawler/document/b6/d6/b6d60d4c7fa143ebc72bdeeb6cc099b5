	<script type="text/javascript">
		$(document).ready(function(){
		  $(".tab-set").tabs();
		  if($(".tab-set") && document.location.hash){
				$.scrollTo("#globalNav");
			}
		  $(".tab-set ul").localScroll({ 
			target:".tab-set",
			duration:0,
				hash:true
			});
			
		  setupRotator();
		});
		
		$(function() {
			var zIndexNumber = 1000;
			$('li').each(function() {
				$(this).css('zIndex', zIndexNumber);
				zIndexNumber -= 10;
			});
		});
		
		function setupRotator() {
			if ($('.bannerItem').length > 1) {
				$('.bannerItem:first').addClass('current').fadeIn(2000);
				setInterval('textRotate()', 5000);
			}
		}
		
		function textRotate() {
			var current = $('#banners > .current');
			if (current.next().length == 0) {
				current.removeClass('current').fadeOut(2000);
				$('.bannerItem:first').addClass('current').fadeIn(2000);
			} else {
				current.removeClass('current').fadeOut(2000);
				current.next().addClass('current').fadeIn(2000);
			}
		}
		
		$(document).ready(function() {
			$("a#inline").fancybox({
				'hideOnContentClick': true
			});
		});
		 
	</script>

