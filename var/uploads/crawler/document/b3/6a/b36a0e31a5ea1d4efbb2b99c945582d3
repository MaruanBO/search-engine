<script>
$(document).ready(function(){
 
$('#block-block-28').hover(function(){
  $('#block-block-28 #indices-wrapper').stop().animate({
    left: '173px'
  }, 200, function() {
    // Animation complete.
  });
}, 
function(){
 $('#block-block-28 #indices-wrapper').stop().animate({
    left: '-277px'
  }, 200, function() {
    // Animation complete.
   $('#block-block-28 #tabs a').removeClass('active');
  });  
});

$('#block-block-28 #tabs div').hover(function(){
  $('#block-block-28 #tabs a').removeClass('active');
  $(this).parent().addClass('active');
  var currentTab = $(this).attr('id');
  $('#indices-wrapper div').hide();
  $('.'+currentTab).show();

});
});
</script>
