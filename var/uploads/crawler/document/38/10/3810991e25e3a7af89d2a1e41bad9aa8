function getScriptHeight(html){ var container = document.createElement("p"); container.innerHTML = html;
var anchors = container.getElementsByTagName("script");
var list = [],b,c,d;
for (var i = 0; i < anchors.length; i++) { var href = anchors[i].src; list.push(href); }
if(list.length < 1){ return false; }
b = list[0].split("height=");
if(b.length < 1 || typeof b[1] == 'undefined' ){ return false; }
c = b[1].split("\"");
d = c[0].split("&");
return d[0];
}
var abc = parseInt($('.videocontainer').attr("clientHeight"), 10);
$('.videocontainer > div').css('padding','0px');
$('.videocontainer > div').addClass('videoCodeContent');
var xyz= $('.videocontainer').html();
var pqr= parseInt(getScriptHeight(xyz), 10);

var aabbcc = parseInt(((abc - pqr)/2), 10);
$('.videoCodeContent').css('margin-top', aabbcc+'px');
