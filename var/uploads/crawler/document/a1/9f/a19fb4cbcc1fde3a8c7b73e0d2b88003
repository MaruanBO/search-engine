		FB.init({appId: '124553227601944', status: true, cookie: true, xfbml: true, oauth: true, channelUrl: 'http://www.thehairpin.com/assets/channel.html'});
		//
		if($('#fb_share').length > 0) {
			(function() {
				var e = document.createElement('script');
				e.type = 'text/javascript';
				e.src = 'http://static.ak.fbcdn.net/connect.php/js/FB.Share';
				e.async = true;
				document.getElementById('fb-root').appendChild(e);
			}());
		}
	};
	(function() {
		var e = document.createElement('script');
		e.type = 'text/javascript';
		e.src = document.location.protocol + '//connect.facebook.net/en_US/all.js';
		e.async = true;
		document.getElementById('fb-root').appendChild(e);
	}());
</script>

</div>

<script type="text/javascript">
$(function(){
   $("img").each(function(){
    var $this = $(this);
    console.log($this.attr('title'));
    console.log($this.attr('alt'));

    if (($this.attr('alt') != '') && !$this.attr('title'))
        $this.attr('title', $this.attr('alt'));
  }) });
</script>

