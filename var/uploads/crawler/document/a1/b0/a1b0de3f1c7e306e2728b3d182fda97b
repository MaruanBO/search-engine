function alignCenter(){
		innerW=$('.homebg-video').innerWidth();
		innerH=$('.homebg-video').innerHeight()+50;
		$('.homebg-video').css({'left':((window.innerWidth-innerW)/2),'top':((window.innerHeight-innerH)/2)});
	}

function openPopup(){
	$('body').css({'overflow':'hidden'});
		$('#videoMask2').fadeIn(300);
		$('.homebg-video').fadeIn(1000);
	}
	
function closedPopup(){
	$('#videoMask2').fadeOut(1000);
		$('.homebg-video').fadeOut(300);
		$('.homebg-video-placing').html(' ');
		$('body').css({'overflow':'auto'});
}	

