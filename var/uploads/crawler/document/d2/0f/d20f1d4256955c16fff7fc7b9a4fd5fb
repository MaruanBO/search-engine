var streamTxtFile = new XMLHttpRequest();
var streamTxtContents;
streamTxtFile.open("GET", "http://www.pcper.com/live/livestatus.txt", true);
streamTxtFile.setRequestHeader("If-Modified-Since", "Sat, 1 Jan 2005 00:00:00 GMT");
streamTxtFile.onreadystatechange = function() {
	if (streamTxtFile.readyState === 4)
	{
		if (streamTxtFile.status === 200)
		{
			streamTxtContents = streamTxtFile.responseText;
			//The code below should remove any non alphanumeric characters
			//in case you accidentally put a space or something in there.
			//If it doesn't work comment out this code -- I'm not too
		    //confident on it.
			streamTxtContents = streamTxtContents.replace(/[^a-zA-Z 0-9]+/g,'')
			
			if (streamTxtContents == "online")
			{
				$('#pcper_online').show();
				$('#pcper_offline').hide();
			}
			else if (streamTxtContents == "offline")
			{
				$('#pcper_online').hide(); 
				$('#pcper_offline').show();
			}			
			else if (streamTxtContents == "twit")
			{
				$('#pcper_online').show();
				$('#pcper_offline').hide();
			}
			else if (streamTxtContents == "justin")
			{
				$('#pcper_online').show(); 
				$('#pcper_offline').hide();
			}
			else
			{

			}

		}

	}

}
streamTxtFile.send();
</script>

