		<script type="text/javascript">
	$(function () {
		$('.action-box > h2').click(function () {
			var $p = $(this).parent();

			// For some reason I must first use toggleClass and then add/remove the
			// classes manually. Something very strange is going on here...
			$p.toggleClass('active');

			if ($p.hasClass('active')) {
				$p.removeClass('active');
			} else {
				$p.addClass('active');
			}

			$('#login-login').focus();
		});

		function scrollSplash(ev){
			document.getElementById('splash-wood').style.marginTop = "-"+ Math.round(window.pageYOffset/2) + "px";
			document.getElementById('splash-photo').style.backgroundPosition = "center -"+ Math.round(window.pageYOffset/4) + "px";
			document.getElementById('wood-cta').style.backgroundPosition = "0px "+ Math.round(window.pageYOffset/1.5) + "px";
		}
		window.onscroll=scrollSplash;
		
		var x = ["firstwood","secondwood", "thirdwood"];
		var y = ["firstphoto","secondphoto", "thirdphoto"];
		var current = 1;

		function switchsplash() {
			var wood = $("#splash-wood");
			var photo = $("#splash-photo");
			wood.attr("class", "splash-wood");
			photo.attr("class", "splash-photo");
			wood.addClass(x[current]);
			photo.addClass(y[current]);
			current++;
			if(current > 2) {
				current = 0;
			}
		}

		setInterval(function(){switchsplash()},6000);
		
	});

</script>
