<script type="text/javascript">
var chat = 'offline';
(function() {
	var se = document.createElement('script'); se.type = 'text/javascript'; se.async = true;
	se.src = '//storage.googleapis.com/code.snapengage.com/js/15e2c22a-5d83-4fae-abe6-0138c9e0bbe8.js';
	var done = false;
	se.onload = se.onreadystatechange = function() {
		if (!done&&(!this.readyState||this.readyState==='loaded'||this.readyState==='complete')) {
	        done = true;
	        /* Place your SnapEngage JS API code below */
	        SnapEngage.setCallback('Close', function (type, status) {
			    if (_gaq) _gaq.push(['_trackEvent', 'OnlineChat', 'Close', type ]);
			});
			SnapEngage.setCallback('Open', function (status) {
			    if (_gaq) _gaq.push(['_trackEvent', 'OnlineChat', 'Open', status ]);
			});
			SnapEngage.setCallback('OpenProactive', function (agent, msg) {
			    if (_gaq) _gaq.push(['_trackEvent', 'OnlineChat', 'Open', 'proactive' ]);
			});
			SnapEngage.setCallback('StartChat', function (email, msg, type) {
			    if (_gaq) _gaq.push(['_trackEvent', 'OnlineChat', 'Chat', type ]);
			    if (_gaq) _gaq.push(['_trackPageview', '/onlinechat?type='+type+'&thankyou' ]);
				if (_gaq) _gaq.push(['rollup._trackPageview', '/onlinechat?type='+type+'&thankyou' ]);
			});
			SnapEngage.setCallback('StartCallme', function (phone) {
			    if (_gaq) _gaq.push(['_trackEvent', 'OnlineChat', 'Callme' ]);
			});
			
			var tid = setTimeout(checkChatStatus, 2*60*1000);
			function checkChatStatus(){
				SnapEngage.getAgentStatusAsync(function (online) {
					if (online) {
						$('.chat-online').show();
						chat = 'online';
						//SnapEngage.showButton();
					} else {
						$('.chat-online').hide();
						chat = 'offline';
						//SnapEngage.hideButton();
					}
					//if (window.console && console.log) console.log('Chat='+chat);
				});
				clearTimeout(tid);
				tid = setTimeout(checkChatStatus, 2*60*1000);
			}
			checkChatStatus();
		}
    };
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(se, s);
  })();
</script>
