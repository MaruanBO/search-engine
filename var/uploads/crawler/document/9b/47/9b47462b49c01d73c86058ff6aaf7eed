    <script type="text/javascript">
        $(function () { // document ready
            if (!!$('.share-outside .sharing').offset()) { // make sure ".sharing" element exists
                var sharingTop = $('.share-outside .sharing').offset().top; // returns number
                $(window).scroll(function () { // scroll event
                    var windowTop = $(window).scrollTop(); // returns number
                    if (sharingTop < windowTop) {
                        $('.share-outside .sharing').css({ position: 'fixed', top: '10px' });
                    }
                    else {
                        $('.share-outside .sharing').css('position', 'static');
                    }
                });
            }
        });
    </script>
    
    <!-- Ad-Resize -->
    <script type="text/javascript">
        // Resize iframe to fit its contents!
        googletag.cmd.push(function () {
            function resize_iframe_by_contents(e) {
                var height = e.contents()[0].body.offsetHeight;
                if (height >= 90 && height <= 110) height = 90;
                else if (height >= 120 && height <= 140) height = 120;
                else if (height >= 200 && height <= 220) height = 200;
                else if (height >= 250 && height <= 270) height = 250;

                if (typeof (height) !== "undefined" && height != null && height != "")
                    e.height(height + 'px');
                e.width(e.contents().width() + 'px');
            }

            $('#div-gpt-ad-1372182774887-0 iframe, #div-gpt-ad-1368329140967-5 iframe, #div-gpt-ad-1418735985005-0 iframe').each(function (i, v) {

                var iframe = $(v);
                if (iframe.contents().find('div,a,iframe,embed,span,ins').length == 0) {
                    iframe.load(function () {
                        setTimeout(function () { resize_iframe_by_contents(iframe); }, 150);
                    });
                }
                else {
                    setTimeout(function () { resize_iframe_by_contents(iframe); }, 150);
                }
            });
        });
    </script>
    <!-- Ad-Resize -->

