<script src="http://www.ghirardelli.com/skin/frontend/enterprise/gdc/js/tab_plugin.js"></script>
<script src="http://www.ghirardelli.com/skin/frontend/enterprise/gdc/js/jquery.mCustomScrollbar.concat.min.js"></script>

<script type="text/javascript">
    //<![CDATA[
    jQuery(function($){
        $(window).load(function(){
            $("#content, #mobile_nav_content, #mobile_profile_nav_content").mCustomScrollbar({
                autoHideScrollbar:true
            });

                        $("#sb-wrapper #sb-wrapper-inner").insertAfter("#sb-wrapper #sb-info");
        });

        $(".nav__mobile__primary--btn").click(function() {
            $("#content").mCustomScrollbar("scrollTo", 0);
        });

        $(document).ready(function() {
            $('.resize').resizenow();
        });

        $(window).bind("resize", function() {
            $('.resize').resizenow();
        });

        $(".nav__mobile__dropdown__primary--btn--small" ).click(function() {
            $('.resize').resizenow();
        });

        $.fn.resizenow = function() {
            var winHeight = $(window).height();
            var winWidth = $(window).width();
            var heightToBeat = $('#nav__mobile__dropdown--container').height() + $('.nav__mobile__primary').height();

            if (winHeight <= heightToBeat) {
                $('#content').height(($(window).height() - $('.nav__mobile__primary').height()) - ($('.nav__mobile__secondary').height()));
            } else {
                $('#content').css('max-height','400px');
                $('#content').css('height','auto');
            }

                        if (winWidth <= 1006) {
                $(".cms-home .professionalCta .professionalCta__image").insertAfter(".cms-home .professionalCta .square-cta-blue");
            } else {
                $(".cms-home .professionalCta .square-cta-blue").insertAfter(".cms-home .professionalCta .professionalCta__image");
            }
        };

        equalheight = function(container){

            var currentTallest = 0,
                currentRowStart = 0,
                rowDivs = new Array(),
                $el,
                topPosition = 0;

            $(container).each(function() {
                $el = $(this);
                $($el).height('auto')
                topPostion = $el.position().top;

                if (currentRowStart != topPostion) {
                    for (currentDiv = 0 ; currentDiv < rowDivs.length ; currentDiv++) {
                        rowDivs[currentDiv].height(currentTallest + 25);
                    }
                    rowDivs.length = 0; // empty the array
                    currentRowStart = topPostion;
                    currentTallest = $el.height();
                    rowDivs.push($el);
                } else {
                    rowDivs.push($el);
                    currentTallest = (currentTallest < $el.height()) ? ($el.height()) : (currentTallest);
                }
                for (currentDiv = 0 ; currentDiv < rowDivs.length ; currentDiv++) {
                    rowDivs[currentDiv].height(currentTallest + 25);
                }
            });
        }

        $(window).load(function() {
            equalheight('.shop__items .shop__item, .shop__items2 .shop__item');
        });

        $(window).resize(function(){
            equalheight('.shop__items .shop__item, .shop__items2 .shop__item');
        });

        $('.explore-more-recipes .explore-more-recipes-tab li.category a').click(function(){
            equalheight('.shop__items .shop__item');
        });
    });
    //]]>
</script>        

