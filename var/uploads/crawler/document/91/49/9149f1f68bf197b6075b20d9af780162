<script type="text/javascript" >
$('#expert-curated-links-scroller-block .slide-url').on('click', function(event){
    var self = $(this),
    isActive = self.parent().hasClass('active');

    // do only if the link is in an 'active' indicator
    if(isActive){
        window.location.assign(self.attr('href'));
    }
});

$('#expert-curated-links-scroller-block')
    .on('slide.bs.carousel', function(event){
        var self = $(this);
        self.find('.carousel-indicators .active').addClass('previous');
    })
    .on('slid.bs.carousel', function(event){
        var self = $(this);
        self.find('.carousel-indicators .previous').removeClass('previous');
    });
