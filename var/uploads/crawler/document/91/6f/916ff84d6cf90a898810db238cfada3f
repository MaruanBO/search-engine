					tempObj.amount = itemPriceArr[idx];
					tempObj.quantity = quantityArr[idx];
					tempObj.discount = tempObj.amount - adjustedItemPriceArr[idx];
					
					productList.push(tempObj);
				}
				
				//Discount
				var discount = 0;
				for(idx in itemPriceArr)
				{
					discount = discount + parseFloat(itemPriceArr[idx]);
				}
