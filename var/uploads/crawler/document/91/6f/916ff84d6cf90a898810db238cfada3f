	    	categoryName: "",
	    	subCategoryName: "",
	    	userId: (typeof customerId !== "undefined") ? customerId : "",
	    	productId: "",
	    	productImagePath: "",
	    	customerType: "",
	    	
	    	//Transaction props
	    	orderId: "",
	    	orderTotal: "",
	    	orderDiscount: "0",
	    	productTotal: "",
	    	productList: [],
	    	
				promoIdList: {
					"HomePage": 1,
					"Category": 2,
					"SubCategory": 3,
					"Product":	4,
					"ShoppingCart_Page": 5,
					"Search": 6,
					"ThankYou_Page": 100
				},
				
				findPromoListId: function(pageName)
				{
					var promoId = "";
					
					try
					{
						//Find PromoId
						for(promoIdName in this.promoIdList)
						{
							if(promoIdName == pageName)
								promoId = this.promoIdList[promoIdName];
						}
						
						//Handle Category/Product page
						if(promoId == "")
						{					
							//Product Page
							if(typeof superItem !== "undefined" && superItem != "")
							{
								promoId = this.promoIdList["Product"];
								this.productId = superItem;				
								this.productImagePath = dojo.query("#productImage img")[0].src;
								
								var pos = location.href.indexOf("/h/");
								var url = location.href.substring(pos).split("/");
								
								if(url.length > 3 && url[2] != superItem)
								{
									this.categoryName = url[2];
									
									if(url.length == 5) //Sub level category
									{
										this.subCategoryName = url[3];
									}
								}
							}
							//Category Page
							else if(pageName.indexOf("Cat:") == 0)
							{
								if(vcCategoryPath.indexOf("_") == -1)
								{
									promoId = this.promoIdList["Category"];
									this.categoryName = vcCategoryPath;
								}
								else
								{
									promoId = this.promoIdList["SubCategory"];
									
									var catArr = vcCategoryPath.split("_");
									this.categoryName = catArr[0];
									this.subCategoryName = catArr[1];
								}
							}							
						}
						
						//Shopping Cart
						if(promoId == 5)
						{
							//Grab first item and populate prod_id and prod_img
							this.productId = tmParams.cartItems.split("|")[0];
							this.productImagePath = (dojo.query(".image img").length > 0) ? dojo.query(".image img")[0].src : "";
						}
						
						//Order Confirmation
						if(promoId == 100)
						{
							this.orderId = tmParams.orderNumber;
							this.orderTotal = tmParams.grandTotal;
							this.subTotal = tmParams.productTotal;
						}						
					}
					catch(e)
					{
						console.error("Unable to find promo list ID. " + e);
					}
					
					this.promoId = promoId;
				}
			}
			becDotomi.findPromoListId(cmPageName);	    
	    
