<script type="text/javascript">

//Get URL Parameter
function GetURLforswitch(switchParam)
{
	var switchURL = window.location.search.substring(1);
	var switchURLsplit = switchURL.split('&');
	for (var iswch = 0; iswch < switchURLsplit.length; iswch++)
	{
		var switchParamName = switchURLsplit[iswch].split('=');
		if (switchParamName[0] == switchParam)
		{
			return switchParamName[1];
		}
	}
}

var whatsmyParam = GetURLforswitch('otrack');

//Drop Cookie for var
if (whatsmyParam=="email")
  {
  document.cookie = 'switchcodecookie = email; path=/';
  }
if (whatsmyParam=="cpc")
  {
  document.cookie = 'switchcodecookie = cpc; path=/';
  }
if (whatsmyParam=="aff")
  {
  document.cookie = 'switchcodecookie = aff; path=/';
  }
if (whatsmyParam=="gdn" || whatsmyParam=="criteo")
  {
  document.cookie = 'switchcodecookie = gdncrit; path=/';
  }
if (whatsmyParam=="shpch")
  {
  document.cookie = 'switchcodecookie = shpch; path=/';
  }

//Get cookie data
if(typeof String.prototype.trim !== 'function') {
  String.prototype.trim = function() {
    return this.replace(/^\s+|\s+$/g, ''); 
  }
}

function getCookieOfferT(cnameoffer)
{
var cnameofferA = cnameoffer + "=";
var getallcooks = document.cookie.split(';');
for(var icok=0; icok<getallcooks.length; icok++)
	{
	var trimedcooks = getallcooks[icok].trim();
	if (trimedcooks.indexOf(cnameofferA)==0) return trimedcooks.substring(cnameofferA.length,trimedcooks.length);
	}
return "";
}

var whatsmyParamCookie=getCookieOfferT('switchcodecookie');

//set USP bar
if (whatsmyParamCookie=="email")
  {
  document.getElementById('Toffercode').innerHTML = 'LMAFPR';
  }
if (whatsmyParamCookie=="cpc")
  {
  document.getElementById('Toffercode').innerHTML = 'ZMAFPS';
  }
if (whatsmyParamCookie=="aff")
  {
  document.getElementById('Toffercode').innerHTML = 'XMAFPS';
  }
if (whatsmyParamCookie=="gdncrit")
  {
  document.getElementById('Toffercode').innerHTML = 'YMAFPS';
  }
if (whatsmyParamCookie=="shpch")
  {
  document.getElementById('Toffercode').innerHTML = 'MMAFPS';
  }

</script>

