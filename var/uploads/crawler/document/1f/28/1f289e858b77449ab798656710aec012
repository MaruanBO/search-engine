	}
	
	if (getthetimeyt > 52 && getthetimeyt < 58)
	{
			jQuery('#ShoeLinks2').html('<a href="/gb/en/nirvana-shoes"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Nirvana-Small.jpg" width="184" height="100" border="0" /></a><a href="/gb/en/selena"><img class="BigShoe" src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Selena-Big.jpg" width="184" height="217" border="0" /></a><a href="/gb/en/star"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Star-Small.jpg" width="184" height="100" border="0" /></a>')
