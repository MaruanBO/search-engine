<script type="text/javascript">

function dropcookflag(prefflag)
{
	if (prefflag == 'UK')
	{
		document.cookie = 'HOTTER_SITE_PREFERENCE_COOKIE = EN_GB; max-age=2592000; path=/';
	}
	if (prefflag == 'USA')
	{
		document.cookie = 'HOTTER_SITE_PREFERENCE_COOKIE = EN_US; max-age=2592000; path=/';
	}
	if (prefflag == 'EU')
	{
		document.cookie = 'HOTTER_SITE_PREFERENCE_COOKIE = EN_EU; max-age=2592000; path=/';
	}
	if (prefflag == 'DE')
	{
		document.cookie = 'HOTTER_SITE_PREFERENCE_COOKIE = DE_DE; max-age=2592000; path=/';
	}
	if (prefflag == 'DE-EN')
	{
		document.cookie = 'HOTTER_SITE_PREFERENCE_COOKIE = EN_DE; max-age=2592000; path=/';
	}
}

	var clicker = '0';
	jQuery("#UKFlag").click(function() {

	if (clicker == '0')
	{
	jQuery("#flagdrop").finish().show('1000','swing')
	clicker = '1';
	}
	else
	{
	jQuery("#flagdrop").finish().hide('1000','swing')
	clicker = '0';
	}
	});

</script>

<script type="text/javascript">
if ("https:" == document.location.protocol) {
var flaglinkch = document.getElementById('linkflaghold').getElementsByTagName('a');
for (var flagtlinki = 0; flagtlinki < flaglinkch.length; flagtlinki++) {
	var flaglinkstr = flaglinkch[flagtlinki].toString();
	var flaglinkres = flaglinkstr.replace("https", "http"); 
	flaglinkch[flagtlinki].href = flaglinkres;
	}
}
</script>
