<script type="text/javascript">
var myYTtimer
function video_up()
{
	document.getElementById('vidblc').style.display = 'block'
	document.getElementById('video_content').style.display = 'block'
	document.getElementById('player').src = 
	document.getElementById('player').src.replace('autoplay=0','autoplay=1')
pageTracker._trackEvent("Lightbox", "Watch Video", "SS15 Shopable video", 0, false);
	gettime();
}

function video_close()
{
	document.getElementById('vidblc').style.display = 'none';
	document.getElementById('video_content').style.display = 'none';
	document.getElementById('player').src = 
	document.getElementById('player').src.replace('autoplay=1','autoplay=0')
	clearInterval(myYTtimer);
}
</script> 

<script type="text/javascript">
function ytcheckandswitch()
{
	if (jQuery('#ShoeLinks').html() != jQuery('#ShoeLinks2').html())
			{
				jQuery("#ShoeLinks").fadeOut(400);
				setTimeout(
				function() 
				{
				switchythtml = jQuery('#ShoeLinks2').html();
				jQuery('#ShoeLinks').html(switchythtml);
				jQuery("#ShoeLinks").fadeIn(400);
				}, 420);
			}
}

function gettime()
{
	myYTtimer = setInterval(function(){
	getthetimeyt = player.getCurrentTime()	
	if (getthetimeyt < 14)
	{
		//Switch to Hattie
		jQuery('#ShoeLinks2').html('<a href="/gb/en/womens-new-this-season"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/NewCollection.jpg" width="184" height="100" border="0" /></a><a href="/gb/en/hattie-sandals"><img class="BigShoe" src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Hattie-Big.jpg" width="184" height="217" border="0" /></a><a href="/gb/en/cruise-shoes"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Cruise-Small.jpg" width="184" height="100" border="0" /></a>')
		ytcheckandswitch()
	}
	
	if (getthetimeyt > 15 && getthetimeyt < 22)
	{
			jQuery('#ShoeLinks2').html('<a href="/gb/en/hattie-sandals"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Hattie-Small.jpg" width="184" height="100" border="0" /></a><a href="/gb/en/cruise-shoes"><img class="BigShoe" src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Cruise-Big.jpg" width="184" height="217" border="0" /></a><a href="/gb/en/leeward-sandals"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Leeward-Small.jpg" width="184" height="100" border="0" /></a>')
			ytcheckandswitch()
	}
	
	if (getthetimeyt > 23 && getthetimeyt < 31)
	{
			jQuery('#ShoeLinks2').html('<a href="/gb/en/cruise-shoes"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Cruise-Small.jpg" width="184" height="100" border="0" /></a><a href="/gb/en/leeward-sandals"><img class="BigShoe" src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Leeward-Big.jpg" width="184" height="217" border="0" /></a><a href="/gb/en/sorbet-shoes"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Sorbet-Small.jpg" width="184" height="100" border="0" /></a>')
			ytcheckandswitch()
	}
	
	if (getthetimeyt > 32 && getthetimeyt < 35)
	{
			jQuery('#ShoeLinks2').html('<a href="/gb/en/leeward-sandals"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Leeward-Small.jpg" width="184" height="100" border="0" /></a><a href="/gb/en/sorbet-shoes"><img class="BigShoe" src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Sorbet-Big.jpg" width="184" height="217" border="0" /></a><a href="/gb/en/dalton-shoes"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Dalton-Small.jpg" width="184" height="100" border="0" /></a>')
			ytcheckandswitch()
	}
	
	if (getthetimeyt > 36 && getthetimeyt < 40)
	{
			jQuery('#ShoeLinks2').html('<a href="/gb/en/sorbet-shoes"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Sorbet-Small.jpg" width="184" height="100" border="0" /></a><a href="/gb/en/dalton-shoes"><img class="BigShoe" src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Dalton-Big.jpg" width="184" height="217" border="0" /></a><a href="/gb/en/donna-heels"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Donna-Small.jpg" width="184" height="100" border="0" /></a>')
			ytcheckandswitch()
	}
	
	if (getthetimeyt > 41 && getthetimeyt < 46)
	{
			jQuery('#ShoeLinks2').html('<a href="/gb/en/dalton-shoes"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Dalton-Small.jpg" width="184" height="100" border="0" /></a><a href="/gb/en/donna-heels"><img class="BigShoe" src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Donna-Big.jpg" width="184" height="217" border="0" /></a><a href="/gb/en/nirvana-shoes"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Nirvana-Small.jpg" width="184" height="100" border="0" /></a>')
			ytcheckandswitch()
	}
	
	if (getthetimeyt > 48 && getthetimeyt < 51)
	{
			jQuery('#ShoeLinks2').html('<a href="/gb/en/donna-heels"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Donna-Small.jpg" width="184" height="100" border="0" /></a><a href="/gb/en/nirvana-shoes"><img class="BigShoe" src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Nirvana-Big.jpg" width="184" height="217" border="0" /></a><a href="/gb/en/selena"><img src="/wcsstore/HotterStorefrontAssetStore/content/images/StaticPages/SS15-Video/Selena-Small.jpg" width="184" height="100" border="0" /></a>')
