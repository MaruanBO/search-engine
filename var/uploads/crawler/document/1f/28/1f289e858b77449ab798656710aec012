function cbor(b1,b2,b3)
{
	if (b1==1)
	{
	document.getElementById('r1').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/dot-on.png";
	}
	else if (b1==0)
	{
	document.getElementById('r1').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/dot-off.png";
	}
	if (b2==1)
	{
	document.getElementById('r2').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/dot-on.png";
	}
	else if (b2==0)
	{
	document.getElementById('r2').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/dot-off.png";	
	}
	if (b3==1)
	{
	document.getElementById('r3').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/dot-on.png";
	}
	else if (b3==0)
	{
	document.getElementById('r3').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/dot-off.png";
	}
}

function faderin(zx)
{
	jQuery("document").ready(function () {
    jQuery(zx).fadeIn(1000);
    });
}

function starter()
{
t=setTimeout("timedCount()",5000);
}

function timedCount()
{
rightclick(0)
t=setTimeout("timedCount()",5000);
}

function stopCount()
{
clearTimeout(t);
t=setTimeout("timedCount()",7000);
}

var clicknumR= 0;
var clicknumL= 0;

function rightclick(ts)
{
	if (ts == 1)
	{
		stopCount()
	}
	if (clicknumR!=0 || clicknumR !=4)
	{
	clicknumR++;
	}
	if (clicknumR==0 || clicknumR ==4)
	{
	clicknumR=1;
	}
	if (clicknumR == 1)
	{
	jQuery("#rimg1").fadeOut(1000);
    faderin('#rimg2');
	//cbor(0,1,0);
	clicknumL=2;
	}
	if (clicknumR == 2)
	{
	jQuery("#rimg2").fadeOut(1000);
    faderin('#rimg3');
	//cbor(0,0,1);
	clicknumL=1;
	}
	if (clicknumR == 3)
	{
	jQuery("#rimg3").fadeOut(1000);
    faderin('#rimg1');
	//cbor(1,0,0);
	clicknumL=0;
	}
}

function leftclick(ts)
{
	if (ts == 1)
	{
		stopCount()
	}
	if (clicknumL!=0 || clicknumL !=4)
	{
	clicknumL++;
	}
	if (clicknumL==0 || clicknumL ==4)
	{
	clicknumL=1;
	}
	if (clicknumL == 1)
	{
	jQuery("#rimg1").fadeOut(1000);
    faderin('#rimg3');
	//cbor(0,0,1);
	clicknumR=2;
	}
	if (clicknumL == 2)
	{
	jQuery("#rimg3").fadeOut(1000);
    faderin('#rimg2');
	//cbor(0,1,0);
	clicknumR=1;
	}
	if (clicknumL == 3)
	{
	jQuery("#rimg2").fadeOut(1000);
    faderin('#rimg1');
	//cbor(1,0,0);
	clicknumR=0;
	}
}

function controlclickers(conclick)
{
	if (conclick == 1)
	{
	stopCount()
	jQuery("#rimg2").fadeOut(1000);
	jQuery("#rimg3").fadeOut(1000);
    faderin('#rimg1');
	//cbor(1,0,0);
	clicknumL=0;
	clicknumR=0;
	}
	if (conclick == 2)
	{
	stopCount()
	jQuery("#rimg1").fadeOut(1000);
	jQuery("#rimg3").fadeOut(1000);
    faderin('#rimg2');
	//cbor(0,1,0);
	clicknumL=2;
	clicknumR=1;
	}
	if (conclick == 3)
	{
	stopCount()
	jQuery("#rimg1").fadeOut(1000);
	jQuery("#rimg2").fadeOut(1000);
    faderin('#rimg3');
	//cbor(0,0,1);
	clicknumL=1;
	clicknumR=2;
	}
}
function LeftArrowRoll(inout)
{
	if (inout == 2)
	{
	document.getElementById('aL').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/but-left.png";
	}
	if (inout == 1)
	{
	document.getElementById('aL').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/but-left.png";
	}
}
function RightArrowRoll(inout)
{
	if (inout == 2)
	{
	document.getElementById('aR').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/but-right.png";
	}
	if (inout == 1)
	{
	document.getElementById('aR').src="/wcsstore/HotterStorefrontAssetStore/content/images/homepage/2013/SS13/SS1/but-right.png";
	}
}

function imagerollingstop()
{
	clearTimeout(t);
}

function imagerollingstart()
{
	t=setTimeout("timedCount()",100);
}
</script>

