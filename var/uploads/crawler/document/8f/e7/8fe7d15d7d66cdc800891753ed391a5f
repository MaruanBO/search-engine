			if (!jQuery('#email-signup-popup').dialog('isOpen')) {
				app.createDialog({id: 'email-signup-popup', options: {
					autoOpen: true,
			    	height: 550,
			    	width: 600,
			    	dialogClass: 'emailsignup',
			    	title: 'Email SignUp Popup',
			    	resizable: false,
				}});
	
				$('.ui-dialog.emailsignup').css('top','50px');
			}
			
			if (!jQuery('#email-signup-popup-thankyou').dialog('isOpen')) {
				app.createDialog({id: 'email-signup-popup-thankyou', options: {
					bgiframe: true,
					autoOpen: false,
					height: 550,
					width: 600,
					dialogClass: 'emailsignupthankyou',
					title: 'Thank you for signing up for email',
					resizable: false
				}});
			}
			// IE9 fix for placeholder
			$('textarea, input').placeholder();
		});
	//--></script>




