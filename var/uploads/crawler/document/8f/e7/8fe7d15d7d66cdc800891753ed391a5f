			<script type="text/javascript">

$(document).ready(function(){ 
    //  rotating text banner

	var arrayTextLinks = 
	[	"free ground shipping and returns on all live joyously products",
                "free shipping and returns<br/> on renewed hope",
                "3 free samples<br/>with any purchase"
	];
	var numCount = 0;

	setInterval(function(){ 
		$("#toggleParent").animate({
				height:"0px",
				opacity:0
			},1000, "linear",function(){
				//cycle to next text display in array
				$("#toggleText").html(arrayTextLinks[numCount]);
				$("#toggleParent").animate({
					height:"38px",
					opacity:1
				},1000,function(){
					//done with animation. increment value to next array index
					if(numCount != arrayTextLinks.length - 1){
						numCount ++;
					} else {
						numCount = 0;
					}
				});
			});
	},3500);
});

</script>
