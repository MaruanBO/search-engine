<input type="hidden" id="emailexistmsg" value="&lt;label class=&quot;errormessage&quot;&gt;you have already subscribed.&lt;/label&gt;"/>
<script type="text/javascript">
	jQuery(document).ready(function(){
		jQuery(".emailOptIn, #headerSignUp, #footerbarSignUp").unbind('sendQuickOptIn').bind('sendQuickOptIn', function(e, source){
			e.stopPropagation();

			var form = jQuery(this).parents('form');
			var url = form.attr("action");



			app.ajax.getJson({
				url		: url,
				data	: form.serialize(),
				callback: function(data){
					if (data.status == "Error" && data.errorMsg != undefined) {
						var referrer = form.find('input[name=quickOptinReferrer]').val();
						showOptinError(form, referrer, data.errorMsg);
					} else if (data.status == "OK" && data.url != undefined) {

						if (source == undefined)
							window.open(data.url, '_blank');
						else if (source == 'popup')
							jQuery(document).trigger('emailPopupSubspSuccess');
						else if (source == 'headerfooter')
							jQuery(document).trigger('emailHeaderFooterSubspSuccess');
					}
				}
			});

			return false;
		});
	});

	function showOptinError(form, referrer, errorMsg) {
		referrer = referrer.substr(referrer.indexOf('-')+1);
		var errorMsgEle = jQuery(form).find(".formerrormessages."+ referrer+"Error");
		var errormsg = jQuery("#emailexistmsg").val();
		errorMsgEle.find(".errormessagesInner").html(errormsg);
		//Add a div to close the error message
		jQuery('.'+referrer+'Error .errormessagesInner').prepend('<div class="close">close</div>');
		errorMsgEle.removeClass("hide");
		jQuery('.errormessagesInner').css('display','block');
	}

	$('.close').live('click', function(){
		var errorMsgEle = jQuery(this).find(".formerrormessages");
		jQuery(".formerrormessages").addClass("hide");
		$('.close').remove();
	});

</script>
	

