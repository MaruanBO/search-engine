<script type="text/javascript">
	function showMoreToggle()
		// Toggles display of all branches and programs
	{
		if ( document.getElementById("more-branches").style.display == "none" ) {
			document.getElementById("branch-hdr").style.display="block";
			document.getElementById("more-branches").style.display="block";
			document.getElementById("progs-sect").style.display="block";
			document.getElementById("seefull").innerHTML="Hide Full List";
			document.getElementById("seefull").style.backgroundImage="url('http://media.aish.com/designimages/arrow-orange-sm-up.gif')";
			document.getElementById("num6").style.marginBottom="0";
		} else {
			document.getElementById("branch-hdr").style.display="none";
			document.getElementById("more-branches").style.display="none";
			document.getElementById("progs-sect").style.display="none";
			document.getElementById("seefull").innerHTML="See Full List";
			document.getElementById("seefull").style.backgroundImage="url('http://media.aish.com/designimages/arrow-orange-sm-down.gif')";
			document.getElementById("num6").style.marginBottom="5px";
		}
	}
</script>

