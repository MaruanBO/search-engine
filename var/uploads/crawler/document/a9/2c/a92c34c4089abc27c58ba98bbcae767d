<script type="text/javascript" src="http://www.aish.com/includes/89c9c57a4b90b417ad79f1f0b5b02ad0/FixOnMouseOut.js"></script>
<script type="text/javascript">
var currmenu = 0;
var timer3 = false;
function ShowSubMenu( menuId )
{
			StopClose();
	CloseCurrMenu();
		
	var popup = document.getElementById( "submen-" + menuId );
	if ( popup ) {
				currmenu = menuId;
		var obj = document.getElementById( menuId );
								var cleft = 0, ctop = 0;

		obj.getElementsByTagName('a')[0].style.backgroundColor = "#FFFEEA";
		obj.getElementsByTagName('a')[0].style.color = "#CC6600";
		var objwidth = obj.offsetWidth;
		while ( obj.offsetParent ) {
			cleft += obj.offsetLeft;
			ctop += obj.offsetTop;
			obj = obj.offsetParent;
		}
		if ( menuFixed ) {
						ctop = 36 + menuHeight;
		}
		var limit = 478;
					var ladjust = 0, radjust = 0;
				if ( cleft - document.getElementById("canvas").offsetLeft > limit ) {
									cleft = cleft - radjust - 432 + objwidth;
			if ( menuId == 478532 )
				// Special for video menu - which has diff margin to minimize wrapping.
				cleft += 1;
			popup.style.backgroundPosition = "-" + ( objwidth - radjust * 2 ) + "px 0";
		} else {
			cleft = cleft + ladjust;
			popup.style.backgroundPosition = ( objwidth - ladjust * 2 ) + "px 0";
		}
		if ( ! menuFixed ) {
			ctop -= 13;
					}
		if ( menuFixed )
			popup.style.position = "fixed";
		else
			popup.style.position = "absolute";
		popup.style.top = ctop + 'px';
		popup.style.left = cleft + 'px';
		popup.style.display = "block";
		
				var arr = popup.getElementsByTagName('div');
		for ( var i=0; i<arr.length; i++ ) {
			if ( arr[i].className == "item-list" )
				var itemlist = arr[i];
			else if ( arr[i].className == "subsects" )
				var sublist = arr[i];
		}
		if ( itemlist.offsetHeight > sublist.offsetHeight )
			sublist.style.height = (itemlist.offsetHeight - 9 ) + "px";
		else if ( sublist.offsetHeight > itemlist.offsetHeight )
			itemlist.style.height = sublist.offsetHeight + "px";
	}
}
function HideSubMenu( menuId )
{
	currmenu = 0;
	document.getElementById( "submen-" + menuId ).style.display = "none";
	var obj = document.getElementById( menuId );
	if ( obj.className.indexOf( "active" ) >= 0 ) {
		obj.getElementsByTagName('a')[0].style.backgroundColor = "#FFFFFF";
	} else {
		obj.getElementsByTagName('a')[0].style.backgroundColor = "";
		obj.getElementsByTagName('a')[0].style.color = "#003388";
	}
}

function CloseCurrMenu()
	// If a menu is currently open, close (i.e. hide) it. A wrapper so HideSubMenu can be called without
	// arguments.
{
	if ( currmenu > 0 )
		HideSubMenu( currmenu );
}

function DelayedMenuClose()
	// Close currently opened menu after short delay. This allows the submenu itself to kill this process if
	// the user slides over to it.
{
	if ( currmenu > 0 )
		timer3 = setTimeout( "CloseCurrMenu()", 200 );
}

function StopClose()
	// If a delayed close process was launched, kill it. Called if user slides mouse from main menu item to
	// its expanded submenu.
{
	if ( timer3 ) {
		clearTimeout( timer3 );
		timer3 = false;
	}
}
</script>


 
			
 




								





	


	


	
	
	
	
	
	
	
	
	
	
	
	
	
	
	




 			 																		 																		 																	 			 																		 																		 																	 			 																		 																		 																	 			 																																																													
																						

																								 																																																													
																						

																								 																																																													
																						

																							



	

		
