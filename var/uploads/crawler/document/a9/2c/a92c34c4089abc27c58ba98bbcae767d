<script type="text/javascript" src="http://www.aish.com/includes/89c9c57a4b90b417ad79f1f0b5b02ad0/FixOnMouseOut.js"></script>
<script type="text/javascript">
var timer = false, usersignedup = false, openDropdown = false, userInWin = false, mouseInWin = false;

function ShowDropdown( dropdownId, hookId, stopCond )
	// The Id's of the dropdown obj and the 'hook' it should be opened beneath. stopCond is an optional
	// param telling func not to run if true. A triangular image with id=dropdownId+"-tri" is also assumed
	// and is placed just above the dropdown (visually connects hook to dropdown).
{
	stopCond = stopCond || false; // don't skip this unless a 'true' was passed
	if ( ! stopCond ) {
		// Close prev dropdown if any was open.
		if ( openDropdown && ( openDropdown != dropdownId ) )
			CloseDropdown();
		
		var hook = document.getElementById( hookId );
		var popup = document.getElementById( dropdownId );
		var cleft = 0;

		var objwidth = hook.offsetWidth;
		while ( hook.offsetParent ) {
			cleft += hook.offsetLeft;
			hook = hook.offsetParent;
		}
		cleft -= 2;
		if ( dropdownId == "signup-form" ) {
							cleft -= 8;
					} else if ( dropdownId == "hottopics" ) {
					}
		popup.style.left = cleft + 'px';
		popup.style.display = "block";
		var triangle = document.getElementById( dropdownId+"-tri" );
					triangle.style.left = cleft + 32 + 'px';
				triangle.style.display = "block";
		openDropdown = dropdownId;
	}
}

function CloseDropdown()
{
	if ( openDropdown ) {
		document.getElementById( openDropdown ).style.display = "none";
		document.getElementById( openDropdown+"-tri" ).style.display = "none";
		openDropdown = false;
		timer = false;
	}
}

function DelayedDDClose( delay )
{
	delay = (typeof delay == "undefined") ? 400 : delay;
	timer = setTimeout( "CloseDropdown()", delay );
	if ( openDropdown == "signup-form" )
		mouseInWin = false;
}

function RecordDeparture()
{
	mouseInWin = false;
}

function StopDDClose()
{
	if ( timer ) {
		clearTimeout( timer );
		timer = false;
	}
}

function ThankUser()
{
	var popup = document.getElementById( "signup-form" );
	popup.style.backgroundColor = "#CFE7FB";
	popup.innerHTML = "<div class='thankyou'>Thank you for signing up<br/>for the aish.com<br/>free newsletter.</div>" +
		"<img src='http://media.aish.com/designimages/close_button_orange-en.png'" +
		"onclick='document.getElementById( \"signup-form\" ).style.display = \"none\"; " + 
		"document.getElementById( \"signup-form-tri\" ).style.display = \"none\"; usersignedup = true;'/>";
	popup.onmouseout = null;
}
</script>

	

