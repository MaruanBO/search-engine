  var futurePLCgetSkinSize = function () {
      var advert_breakpoints = {
          'small' : { 'min' : 0, 'max' : 1279 },
          'large' : { 'min' : 1280, 'max' : 12000 },
      },
      current_window_size = screen.width,
      skin_size = 'small';

      if (!advert_breakpoints) {
          return skin_size;
      }

      for ( var i in advert_breakpoints ) {
          if (!advert_breakpoints.hasOwnProperty(i)) continue;
          if (current_window_size >= advert_breakpoints[i].min && current_window_size <= advert_breakpoints[i].max) {
              return i;
          }
      }
      return skin_size;
  }

  var display_all_ads = function(selector, extra_ad_slots) {

      var jq_selector = ".ad-unit-page-1";
      extra_ad_slots = extra_ad_slots || [];
    
      if ((typeof(selector) != 'undefined') && (selector !== '')) {
          jq_selector = selector;
      }

      if (typeof SPARK_AD_UTILS !== 'undefined') {

          SPARK_AD_UTILS.reset_data();

          if (!SPARK_AD_UTILS.can_display_ad_skin()) {
              
              jq_selector += ":not('.ad-slot-type-skin')";  // Exclude skin
          }
      }

      /* jshint ignore:start */
      
      /* jshint ignore:end */

      // Display ADs
      // # of AD slots = 6 --> False
      window.dfpSettings = {
        dfpID: '8644',
        collapseEmptyDivs: false,
        enableSingleRequest: true,
