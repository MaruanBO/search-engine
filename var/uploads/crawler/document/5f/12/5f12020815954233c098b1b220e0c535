  //  apply an active state to the footer region switcher!
  $(document).ready(function() {
    var footer_region_id = 'footer_region_us';
    var region = $.cookie('sparkRegion');
    if (region) {
        region = region.toUpperCase();
        if (region == 'UK') {
            footer_region_id = 'footer_region_uk';
        } else if (region == 'AU') {
            footer_region_id = 'footer_region_au';
        }
    }
    $('#' + footer_region_id).addClass('active');
    $('#' + footer_region_id + '_top').addClass('active');
  });
