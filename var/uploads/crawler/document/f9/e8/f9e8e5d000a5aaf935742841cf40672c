<!--[if IE]><script>
// Fix Turkish uppercase for small dotless and dotted 'i'
window.turkishToUpper = function(startNode) {
  if(document.getElementsByTagName('html')[0].lang.toLowerCase() != 'tr') return;
  function getStyle(element, style) {
      var result;

      if (document.defaultView && document.defaultView.getComputedStyle) {
          result = document.defaultView.getComputedStyle(element, '').getPropertyValue(style);
      } else if(element.currentStyle) {
          style = style.replace(/\-(\w)/g, function (strMatch, p1) {
              return p1.toUpperCase();
          });
          result = element.currentStyle[style];
      }
      return result;
  }

  function replaceRecursive(element) {
      if (element && element.style && getStyle(element, 'text-transform') == 'uppercase' && /i|Ä±/.test(element.innerHTML)) {
          element.innerHTML = element.innerHTML.replace(/Ä±/g, 'I');
          for (var i in element.childNodes){
            if (element.childNodes[i].tagName == "input" && element.childNodes[i].type == "submit" && element.childNodes[i].value.length){
              element.childNodes[i].value = element.childNodes[i].value.replace(/i/g, 'Ä°');
            }else if (element.childNodes[i].nodeType == 3) { //noteType == 3 => child is text node
              element.childNodes[i].nodeValue = element.childNodes[i].nodeValue.replace(/i/g, 'Ä°');
            }
          }
      }

      if (!element.childNodes || element.childNodes.length == 0) return;

      for (var n in element.childNodes) {
        if ( element.childNodes[n].nodeType != 3 ){
          replaceRecursive(element.childNodes[n]);
        }
      }
  }
  replaceRecursive(startNode)
};
window.turkishToUpper(document.getElementById('outer'));
</script><![endif]-->
